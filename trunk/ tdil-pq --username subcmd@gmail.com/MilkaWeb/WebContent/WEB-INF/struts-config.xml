  <action name="MilkaPhotoForm" path="/uploadMilkaPhoto" scope="session" type="com.tdil.struts.actions.SaveAction">
   <forward name="continue" path="/index.jsp" redirect="true"/>
   <forward name="failure" path="/index.jsp"/>
  </action>
  <action name="PostItForm" path="/addPostIt" scope="session" type="com.tdil.struts.actions.SaveAction">
   <forward name="continue" path="/index.jsp" redirect="true"/>
   <forward name="failure" path="/index.jsp"/>
  </action>
  <action name="PapapediaForm" path="/addPapapedia" scope="session" type="com.tdil.milka.struts.action.AddPapapediaAction">
   <forward name="continue" path="/papapedia.jsp" redirect="true"/>
   <forward name="failure" path="/papapedia.jsp"/>
  </action>
  <action name="EmailEndingForm" path="/uploadEmailEnding" scope="session" type="com.tdil.struts.actions.SaveAction">
   <forward name="continue" path="/index.jsp" redirect="true"/>
