<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

<RelativeLayout
        android:id="@+id/footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center">
        
    

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
             android:weightSum="1.0">

    <TextView
        android:id="@+id/starts"
        android:layout_width="0dip"
        android:layout_height="80dp"
        android:layout_weight="0.33"
        android:gravity="center"
        android:text="1" 
        android:textSize="24dp"/>
    
    <TextView
        android:id="@+id/logo"
        android:layout_width="0dip"
        android:layout_height="80dp"
        android:layout_weight="0.33"
        android:gravity="center"
        android:text="La Cerrajeria" 
        android:textSize="16dp"/>
    
    <TextView
        android:id="@+id/emergency"
        android:layout_width="0dip"
        android:layout_height="80dp"
        android:layout_weight="0.33"
        android:gravity="center"
        android:text="Urgencias" 
        android:textSize="16dp"/>


    </LinearLayout>

</RelativeLayout>

    <RelativeLayout
        android:id="@+id/content"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@id/footer"
        android:gravity="fill">

        <LinearLayout 
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_alignParentTop="true"
            android:weightSum="0.9">
        
        <LinearLayout 
            android:id="@+id/topLinearLayout"
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="0.30" 
            android:weightSum="0.9">

            <ImageView android:id="@+id/top1Image" 
                android:layout_width="0dp"
                android:layout_height="fill_parent"
            	android:layout_weight="0.30"
                android:src="@drawable/llave"
                />
            <ImageView android:id="@+id/top2Image" 
                android:layout_width="0dp"
                android:layout_height="fill_parent"
            	android:layout_weight="0.30"
                android:src="@drawable/llave"
                />
            <ImageView android:id="@+id/top3Image" 
                android:layout_width="0dp"
                android:layout_height="fill_parent"
            	android:layout_weight="0.30"
                android:src="@drawable/llave"
                />

        </LinearLayout>
        
        <LinearLayout 
            android:id="@+id/centerLinearLayout"
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="0.30">

            <ImageView android:id="@+id/center1Image" 
                android:layout_width="0dp"
                android:layout_height="fill_parent"
            	android:layout_weight="0.30"
                android:src="@drawable/llave"
                />
            <ImageView android:id="@+id/center2Image" 
                android:layout_width="0dp"
                android:layout_height="fill_parent"
            	android:layout_weight="0.30"
                android:src="@drawable/llave"
                />
            <ImageView android:id="@+id/center3Image" 
                android:layout_width="0dp"
                android:layout_height="fill_parent"
            	android:layout_weight="0.30"
                android:src="@drawable/llave"
                />
            
        </LinearLayout>
        
        <LinearLayout 
            android:id="@+id/bottomLinearLayout"
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="0.30">

            <ImageView android:id="@+id/bottom1Image" 
                android:layout_width="0dp"
                android:layout_height="fill_parent"
            	android:layout_weight="0.30"
                android:src="@drawable/llave"
                />
            <ImageView android:id="@+id/bottom2Image" 
                android:layout_width="0dp"
                android:layout_height="fill_parent"
            	android:layout_weight="0.30"
                android:src="@drawable/llave"
                />
            <ImageView android:id="@+id/bottom3Image" 
                android:layout_width="0dp"
                android:layout_height="fill_parent"
            	android:layout_weight="0.30"
                android:src="@drawable/llave"
                />
        </LinearLayout>
         
        </LinearLayout>
        
</RelativeLayout>

</RelativeLayout>