<?xml version="1.0" encoding="ISO-8859-1"?>
<!DOCTYPE struts-config PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 1.2//EN"
                               "http://struts.apache.org/dtds/struts-config_1_2.dtd">
<struts-config>
 <data-sources/>
 <form-beans>
  <form-bean id="LoginForm" name="LoginForm" type="com.tdil.milka.struts.forms.LoginForm"/>
  <form-bean id="SystemPropertyForm" name="SystemPropertyForm" type="com.tdil.milka.struts.forms.SystemPropertyForm"/>
  <form-bean id="NotificationEmailForm" name="NotificationEmailForm" type="com.tdil.milka.struts.forms.NotificationEmailForm"/>
  <form-bean id="MilkaPhotoForm" name="MilkaPhotoForm" type="com.tdil.milka.struts.forms.MilkaPhotoForm"/>
  <form-bean id="MilkaPhotoAdministrationForm" name="MilkaPhotoAdministrationForm" type="com.tdil.milka.struts.forms.MilkaPhotoAdministrationForm"/>
  <form-bean id="PostItForm" name="PostItForm" type="com.tdil.milka.struts.forms.PostItForm"/>
  <form-bean id="PostItAdministrationForm" name="PostItAdministrationForm" type="com.tdil.milka.struts.forms.PostItAdministrationForm"/>
 </form-beans>
 <global-exceptions/>
 <global-forwards>
  <forward name="ajaxReturn" path="/empty.jsp"/>
  <forward name="notLogged" path="/boLogin.jsp"/>
  <forward name="notAuthorized" path="/boLogin.jsp"/>
  <forward name="invalidAction" path="/boLogin.jsp"/>
 </global-forwards>
 <action-mappings>
  <action name="LoginForm" path="/login" scope="request" type="com.tdil.milka.struts.action.LoginAction">
   <forward name="failure" path="/boLogin.jsp"/>
   <forward name="success" path="/boHome.jsp" redirect="true"/>
  </action>
  <action path="/logout" type="com.tdil.milka.struts.action.LogoutAction"/>
 
  <action name="SystemPropertyForm" parameter="Admin" path="/goToSystemPropertyABM"
   scope="session" type="com.tdil.struts.actions.GoToABMAction">
   <forward name="continue" path="/systemPropertyAdministration.jsp"/>
  </action>
  <action name="SystemPropertyForm" parameter="Admin" path="/saveSystemProperty"
   scope="session" type="com.tdil.struts.actions.SaveAction">
   <forward name="continue" path="/systemPropertyAdministration.jsp" redirect="true"/>
   <forward name="failure" path="/systemPropertyAdministration.jsp"/>
  </action>
  <action name="SystemPropertyForm" parameter="Admin" path="/editSystemProperty"
   scope="session" type="com.tdil.struts.actions.EditAction">
   <forward name="continue" path="/systemPropertyAdministration.jsp"/>
  </action>
  <action name="SystemPropertyForm" parameter="Admin" path="/toggleDeletedSystemProperty"
   scope="session" type="com.tdil.struts.actions.ToggleDeletedAction">
   <forward name="continue" path="/systemPropertyAdministration.jsp" redirect="true"/>
   <forward name="failure" path="/systemPropertyAdministration.jsp"/>
  </action>
  
  <action name="NotificationEmailForm" parameter="Admin" path="/goToNotificationEmailABM"
   scope="session" type="com.tdil.struts.actions.GoToABMAction">
   <forward name="continue" path="/notificationEmailAdministration.jsp"/>
  </action>
  <action name="NotificationEmailForm" parameter="Admin" path="/saveNotificationEmail"
   scope="session" type="com.tdil.struts.actions.SaveAction">
   <forward name="continue" path="/notificationEmailAdministration.jsp" redirect="true"/>
   <forward name="failure" path="/notificationEmailAdministration.jsp"/>
  </action>
  <action name="NotificationEmailForm" parameter="Admin" path="/editNotificationEmail"
   scope="session" type="com.tdil.struts.actions.EditAction">
   <forward name="continue" path="/notificationEmailAdministration.jsp"/>
  </action>
  <action name="NotificationEmailForm" parameter="Admin" path="/toggleDeletedNotificationEmail"
   scope="session" type="com.tdil.struts.actions.ToggleDeletedAction">
   <forward name="continue" path="/notificationEmailAdministration.jsp" redirect="true"/>
   <forward name="failure" path="/notificationEmailAdministration.jsp"/>
  </action>
  <action name="NotificationEmailForm" parameter="Admin" path="/testEmailNotification"
   scope="session" type="com.tdil.milka.struts.action.TestEmailNotificationAction">
   <forward name="continue" path="/notificationEmailAdministration.jsp"/>
  </action>
  
  <action name="MilkaPhotoAdministrationForm" parameter="Admin" path="/goToMilkaPhotoApprovalPending"
   scope="session" type="com.tdil.struts.actions.GoToABMAction">
   <forward name="continue" path="/milkaPhotoPending.jsp"/>
  </action>
  
  <action name="PostItAdministrationForm" parameter="Admin" path="/goToPostItApprovalPending"
   scope="session" type="com.tdil.struts.actions.GoToABMAction">
   <forward name="continue" path="/postItsPending.jsp"/>
  </action>
  
  <!--  Public actions -->
  <action name="MilkaPhotoForm" path="/uploadMilkaPhoto"
   scope="session" type="com.tdil.struts.actions.SaveAction">
   <forward name="continue" path="/index.jsp" redirect="true"/>
   <forward name="failure" path="/index.jsp"/>
  </action>
  
  <action name="PostItForm" path="/addPostIt"
   scope="session" type="com.tdil.struts.actions.SaveAction">
   <forward name="continue" path="/index.jsp" redirect="true"/>
   <forward name="failure" path="/index.jsp"/>
  </action>
  
  <action path="/meltaction" scope="request" type="com.tdil.milka.struts.action.MeltButtonAction"/>
  
  
 </action-mappings>
 
 <controller processorClass="com.tdil.struts.AuthorizationRequestProcessor"/>
 <message-resources parameter="com.tdil.milka.struts.resources.ApplicationResources"/>
</struts-config>
