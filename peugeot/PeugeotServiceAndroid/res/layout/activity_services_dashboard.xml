<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context=".ChangePasswordActivity" >

    <!-- Login progress -->

    <LinearLayout
        android:id="@+id/loginObjects"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/main_square"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center_vertical"
            android:layout_marginBottom="60dp"
            android:background="@drawable/toplayer85"
            android:baselineAligned="true"
            android:gravity="center_horizontal|center_vertical"
            android:minWidth="250dp"
            android:orientation="vertical"
            android:padding="20dp">

            <Button
                android:id="@+id/Button04"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:layout_marginBottom="3dp"
                android:layout_marginTop="3dp"
                android:background="@drawable/btn_rojo_normal_holo_light"
                android:minHeight="40dp"
                android:onClick="@string/dologin"
                android:text="@string/btn_config_emergencias"
                android:textColor="#ffffff"
                android:textSize="16sp" />

            <Button
                android:id="@+id/Button03"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:layout_marginBottom="3dp"
                android:layout_marginTop="3dp"
                android:background="@drawable/btn_rojo_normal_holo_light"
                android:minHeight="40dp"
                android:onClick="@string/dologin"
                android:text="@string/btn_my_services"
                android:textColor="#ffffff"
                android:textSize="16sp" />

            <Button
                android:id="@+id/Button02"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:layout_marginBottom="3dp"
                android:layout_marginTop="3dp"
                android:background="@drawable/btn_rojo_normal_holo_light"
                android:minHeight="40dp"
                android:onClick="@string/dologin"
                android:text="@string/btn_my_vehicles"
                android:textColor="#ffffff"
                android:textSize="16sp" />

            <Button
                android:id="@+id/Button01"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:layout_marginBottom="3dp"
                android:layout_marginTop="3dp"
                android:background="@drawable/btn_rojo_normal_holo_light"
                android:minHeight="40dp"
                android:onClick="@string/dologin"
                android:text="@string/btn_official_services"
                android:textColor="#ffffff"
                android:textSize="16sp" />
                
			<Button
			    android:id="@+id/updateButton"
			    android:layout_width="fill_parent"
			    android:layout_height="40dp"
			    android:layout_marginBottom="3dp"
			    android:layout_marginTop="3dp"
			    android:background="@drawable/btn_rojo_normal_holo_light"
			    android:minHeight="40dp"
			    android:onClick="@string/dologin"
			    android:text="@string/btn_services_locations"
			    android:textColor="#ffffff"
			    android:textSize="16sp" />

        </LinearLayout>
        
    </LinearLayout>

	<ImageView
	    android:id="@+id/placahome"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_gravity="bottom|center_horizontal"
	    android:layout_marginTop="20dp"
	    android:adjustViewBounds="true"
	    android:baselineAlignBottom="true"
	    android:contentDescription="@string/action_loading"
	    android:maxWidth="350dp"
	    android:src="@drawable/logo_lojack" />

</merge>