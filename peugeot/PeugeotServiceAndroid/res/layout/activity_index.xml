<merge xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context=".HomeActivity" >

    <!-- Login progress -->


    <!-- Login form -->

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/main_square"
        android:gravity="center_vertical|center_horizontal"
        android:orientation="vertical" >
        
        <TableLayout
            android:id="@+id/rdGrid"
            android:layout_width="320dp"
            android:layout_height="320dp"
            android:layout_gravity="center"
            android:background="@drawable/rd_base"
            android:gravity="center"
            android:minHeight="240dp"
            android:minWidth="240dp" >

            <TableRow
                android:id="@+id/tableRow1"
                android:layout_width="320dp"
                android:layout_height="160dp" >

                <LinearLayout
                    android:layout_width="320dp"
                    android:layout_height="120dp"
                    android:animateLayoutChanges="false"
                    android:gravity="top" >

                    <RelativeLayout
                        android:layout_width="160dp"
                        android:layout_height="160dp"
                        android:layout_gravity="bottom" >

                        <Button
                            android:id="@+id/btnFooterHome"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_alignParentBottom="true"
                            android:layout_alignParentRight="true"
                            android:layout_marginBottom="22dp"
                            android:layout_marginRight="25dp"
                            android:background="@drawable/rd_item_home"
                            android:text="@string/btn_home" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="160dp"
                        android:layout_height="160dp"
                        android:layout_gravity="bottom" >

                        <Button
                            android:id="@+id/btnFooterTV"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_alignParentBottom="true"
                            android:layout_alignParentLeft="true"
                            android:layout_marginBottom="20dp"
                            android:layout_marginLeft="43dp"
                            android:background="@drawable/rd_item_ljtv"
                            android:text="@string/btn_tv" />

                    </RelativeLayout>

                </LinearLayout>
                
            </TableRow>

            <TableRow
                android:id="@+id/tableRow2"
                android:layout_width="320dp"
                android:layout_height="160dp"
                android:gravity="top" >

                <LinearLayout
                    android:layout_width="320dp"
                    android:layout_height="160dp" >

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent" >

                        <LinearLayout
                            android:layout_width="160dp"
                            android:layout_height="160dp"
                            android:gravity="top|right"
                            android:orientation="vertical" >

                            <RelativeLayout
                                android:id="@+id/vluCar"
                                android:layout_width="75dp"
                                android:layout_height="60dp"
                                android:layout_marginRight="60dp"
                                android:layout_marginTop="0dp"
                                android:orientation="vertical" >

                            <Button
                                android:id="@+id/btnFooterPrevent"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:layout_alignParentRight="true"
                                android:layout_alignParentTop="true"
                                android:layout_marginRight="0dp"
                                android:background="@drawable/rd_item_cars"
                                android:text="@string/btn_prevent" />
                                
                            </RelativeLayout>

                            <Button
                                android:id="@+id/btnFooterPets"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:layout_marginRight="8dp"
                                android:layout_marginTop="15dp"
                                android:background="@drawable/rd_item_pets"
                                android:text="@string/btn_pets" />

                            

                        </LinearLayout>

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="160dp"
                        android:layout_height="160dp" >

                        <Button
                            android:id="@+id/btnFooterParkings"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentTop="true"
                            android:layout_marginLeft="48dp"
                            android:layout_marginTop="42dp"
                            android:background="@drawable/rd_item_park"
                            android:text="@string/btn_parkings" />

                    </RelativeLayout>

                </LinearLayout>

            </TableRow>


        </TableLayout>


    </LinearLayout>

    <TextView
        android:id="@+id/helpText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:paddingTop="110dp"
        android:text="@string/cmnt_home_page"
        android:textColor="@color/gray"
        android:textSize="12sp"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/main_promo_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:paddingTop="10dp"
        android:text="@string/rd_main_promo_title"
        android:textColor="@color/bgBase"
        android:textSize="18sp" />
    
    <TextView
        android:id="@+id/main_hookline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:paddingLeft="35dp"
        android:paddingRight="35dp"
        android:paddingTop="40dp"
        android:text="@string/rd_main_hookline"
        android:textColor="@color/bgBase"
        android:textSize="12sp" />
    
    <TextView
        android:id="@+id/dropTarget"
        android:layout_width="124dp"
        android:layout_height="124dp"
        android:layout_gravity="center"
        android:background="@drawable/transparente"
        android:gravity="center"
        android:paddingTop="5dp"
        android:text="@string/rd_default_comment"
        android:visibility="visible" />

    <ImageView
        android:id="@+id/placahome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="20dp"
        android:adjustViewBounds="true"
        android:baselineAlignBottom="true"
        android:contentDescription="@string/action_loading"
        android:src="@drawable/logo_lojack" />

</merge>