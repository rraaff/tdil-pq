<merge xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context=".HomeActivity" >

    <!-- Login progress -->


    <!-- Login form -->

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="center_vertical|center_horizontal"
        android:gravity="center_vertical|center_horizontal|top"
        android:orientation="vertical" >

        <TableLayout
            android:layout_width="fill_parent"
            android:layout_height="81dp"
            android:background="@color/black"
            android:gravity="top" >

            <TableRow
                android:id="@+id/signatureBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ac_secondary_bar" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="81dp"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:layout_weight="1" >

                    <ImageView
                        android:id="@+id/gr_iso"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_gravity="left|center_vertical"
                        android:layout_margin="10dp"
                        android:src="@drawable/iso" />

                    <ImageView
                        android:id="@+id/gr_signature"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_weight="1"
                        android:src="@drawable/signature" />

                    <ImageView
                        android:id="@+id/gr_userIcon"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_gravity="center_vertical|right"
                        android:layout_margin="10dp"
                        android:src="@drawable/icon_user" />

                </LinearLayout>

            </TableRow>

            <!-- TableRow
                android:id="@+id/tableRow2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >
            </TableRow>

            <TableRow
                android:id="@+id/tableRow3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >
            </TableRow>

            <TableRow
                android:id="@+id/tableRow4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >
            </TableRow  -->
        </TableLayout>
        
        <TableLayout
            android:id="@+id/rdGrid"
            android:layout_width="fill_parent"
            android:layout_height="320dp"
            android:layout_gravity="top"
            android:background="@drawable/bg_base_rueda"
            android:gravity="center"
            android:minHeight="240dp"
            android:minWidth="240dp" >

            <TableRow
                android:id="@+id/tableIDType"
                android:layout_width="320dp"
                android:layout_height="160dp" >

                <LinearLayout
                    android:layout_width="320dp"
                    android:layout_height="120dp"
                    android:animateLayoutChanges="false"
                    android:gravity="top" >

                    <RelativeLayout
                        android:layout_width="160dp"
                        android:layout_height="160dp"
                        android:layout_gravity="bottom" >

                        <Button
                            android:id="@+id/btnFooterHome"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_alignParentBottom="true"
                            android:layout_alignParentRight="true"
                            android:layout_marginBottom="22dp"
                            android:layout_marginRight="25dp"
                            android:background="@drawable/rd_item_home"
                            android:text="@string/btn_home" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="160dp"
                        android:layout_height="160dp"
                        android:layout_gravity="bottom" >

                        <Button
                            android:id="@+id/btnFooterTV"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_alignParentBottom="true"
                            android:layout_alignParentLeft="true"
                            android:layout_marginBottom="20dp"
                            android:layout_marginLeft="43dp"
                            android:background="@drawable/rd_item_ljtv"
                            android:text="@string/btn_tv" />

                    </RelativeLayout>

                </LinearLayout>
                
            </TableRow>

            <TableRow
                android:id="@+id/tableIDNumber"
                android:layout_width="320dp"
                android:layout_height="160dp"
                android:gravity="top" >

                <LinearLayout
                    android:layout_width="320dp"
                    android:layout_height="160dp" >

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent" >

                        <LinearLayout
                            android:layout_width="160dp"
                            android:layout_height="160dp"
                            android:gravity="top|right"
                            android:orientation="vertical" >

                            <RelativeLayout
                                android:id="@+id/vluCar"
                                android:layout_width="75dp"
                                android:layout_height="60dp"
                                android:layout_marginRight="60dp"
                                android:layout_marginTop="0dp"
                                android:orientation="vertical" >

                            <Button
                                android:id="@+id/btnFooterPrevent"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:layout_alignParentRight="true"
                                android:layout_alignParentTop="true"
                                android:layout_marginRight="0dp"
                                android:background="@drawable/rd_item_cars"
                                android:text="@string/btn_prevent" />
                                
                            </RelativeLayout>

                            <Button
                                android:id="@+id/btnFooterPets"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:layout_marginRight="8dp"
                                android:layout_marginTop="15dp"
                                android:background="@drawable/rd_item_pets"
                                android:text="@string/btn_pets" />

                            

                        </LinearLayout>

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="160dp"
                        android:layout_height="160dp" >

                        <Button
                            android:id="@+id/btnFooterParkings"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentTop="true"
                            android:layout_marginLeft="48dp"
                            android:layout_marginTop="42dp"
                            android:background="@drawable/rd_item_park"
                            android:text="@string/btn_parkings" />

                    </RelativeLayout>

                </LinearLayout>

            </TableRow>


        </TableLayout>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:background="@drawable/bg_white_degrade" >

            <TableRow
                android:id="@+id/applogoBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <ImageView
                    android:id="@+id/appLogoNegro"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/app_logo_negro" />

            </TableRow>


        </TableLayout>

    </LinearLayout>
    
    <TextView
        android:id="@+id/dropTarget"
        android:layout_width="124dp"
        android:layout_height="124dp"
        android:layout_gravity="center"
        android:background="@drawable/transparente"
        android:gravity="center"
        android:paddingTop="5dp"
        android:text="@string/rd_default_comment"
        android:visibility="visible" />


</merge>