<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context=".LoginActivity" >

    <LinearLayout
        android:id="@+id/loginObjects"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="top|center_horizontal"
        android:background="@color/bgBaseGray"
        android:baselineAligned="false"
        android:gravity="top|center_horizontal"
        android:orientation="vertical"
        android:scrollbarStyle="insideOverlay"
        android:scrollbars="vertical" >

        <TableLayout
            android:layout_width="fill_parent"
            android:layout_height="81dp"
            android:background="@color/black"
            android:gravity="top" >

            <TableRow
                android:id="@+id/signatureBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ac_secondary_bar" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="81dp"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:layout_weight="1" >

                    <ImageView
                        android:id="@+id/gr_iso"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_gravity="left|center_vertical"
                        android:layout_margin="10dp"
                        android:src="@drawable/iso"
                        android:visibility="invisible" />

                    <ImageView
                        android:id="@+id/gr_signature"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_weight="1"
                        android:src="@drawable/signature" />

                    <ImageView
                        android:id="@+id/gr_userIcon"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_gravity="center_vertical|right"
                        android:layout_margin="10dp"
                        android:src="@drawable/icon_user"
                        android:visibility="invisible" />

                </LinearLayout>

            </TableRow>

        </TableLayout>

        <ScrollView
            android:id="@+id/scrollView1"
            android:layout_width="match_parent"
            android:layout_height="fill_parent" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

	            <TextView
	                android:id="@+id/loadingInfoText"
	                style="@style/FormTitles"
	                android:layout_width="fill_parent"
	                android:layout_height="wrap_content"
	                android:text="@string/title_activity_update"
	                android:textColor="@color/bgBase" />
                
				<LinearLayout
				    android:layout_width="match_parent"
				    android:layout_height="wrap_content"
				    android:orientation="vertical"
				    android:paddingLeft="20dp"
				    android:paddingRight="20dp" >

	                <Spinner
	                    android:id="@+id/documentType"
	                    android:layout_width="fill_parent"
	                    android:layout_height="wrap_content"
	                    android:layout_marginBottom="3dp"
	                    android:layout_marginTop="3dp"
	                    android:background="@color/bgFormFieldsLight" />
	
	                <EditText
	                    android:id="@+id/documentNumber"
	                    android:layout_width="fill_parent"
	                    android:layout_height="wrap_content"
	                    android:clickable="false"
	                    android:enabled="false"
	                    android:hint="@string/hnt_doc_number"
	                    android:inputType="number"
	                    style="@style/FormsElements_editText" />
	
	                <EditText
	                    android:id="@+id/firstName"
	                    android:layout_width="match_parent"
	                    android:layout_height="wrap_content"
	                    android:hint="@string/hnt_firstname"
	                    style="@style/FormsElements_editText" >
	
	                    <requestFocus />
	                </EditText>
	
	                <EditText
	                    android:id="@+id/lastName"
	                    android:layout_width="match_parent"
	                    android:layout_height="wrap_content"
	                    android:hint="@string/hnt_apellido"
	                    style="@style/FormsElements_editText" />
	
					<RadioGroup android:orientation="vertical"
					    android:layout_width="match_parent" 
					    android:layout_height="wrap_content">
	
					    <RadioButton
		                    android:id="@+id/chkMale"
		                    android:layout_width="wrap_content"
		                    android:layout_height="wrap_content"
		                    android:text="@string/btn_male"
		                    android:textColor="@color/bgBase" />
	
		                <RadioButton
		                    android:id="@+id/chkFemale"
		                    android:layout_width="wrap_content"
		                    android:layout_height="wrap_content"
		                    android:text="@string/btn_female"
		                    android:textColor="@color/bgBase" />
					</RadioGroup>
	                
	
	                <EditText
	                    android:id="@+id/email"
	                    android:layout_width="match_parent"
	                    android:layout_height="wrap_content"
	                    android:enabled="false"
	                    android:clickable="false"
	                    android:hint="@string/hnt_email"
	                    android:inputType="textEmailAddress"
	                    style="@style/FormsElements_editText" />
	
					<TextView
						android:id="@+id/birthDate"
						android:layout_width="fill_parent"
						android:layout_height="wrap_content"
						style="@style/FormsElements_editText" />
	
	                <EditText
	                    android:id="@+id/areaCode"
	                    android:layout_width="match_parent"
	                    android:layout_height="wrap_content"
	                    android:hint="@string/hnt_area_code"
	                    android:inputType="number"
	                    style="@style/FormsElements_editText" />
	
	                <EditText
	                    android:id="@+id/mobile"
	                    android:layout_width="match_parent"
	                    android:layout_height="wrap_content"
	                    android:hint="@string/hnt_mobile"
	                    android:inputType="number"
	                    style="@style/FormsElements_editText" />
	
	                <Spinner
	                    android:id="@+id/state"
	                    android:layout_width="match_parent"
	                    android:layout_height="wrap_content"
	                    android:background="@color/bgFormFieldsLight" />
	
	                <EditText
	                    android:id="@+id/city"
	                    android:layout_width="match_parent"
	                    android:layout_height="wrap_content"
	                    android:hint="@string/hnt_city"
	                    style="@style/FormsElements_editText" />
	                
	                <EditText
	                    android:id="@+id/street1"
	                    android:layout_width="match_parent"
	                    android:layout_height="wrap_content"
	                    android:hint="@string/hnt_calle1"
	                    style="@style/FormsElements_editText" />
	
	                <EditText
	                    android:id="@+id/street2"
	                    android:layout_width="match_parent"
	                    android:layout_height="wrap_content"
	                    android:hint="@string/hnt_calle2"
	                    style="@style/FormsElements_editText" />
	
	                <Spinner
	                    android:id="@+id/addressType"
	                    android:layout_width="match_parent"
	                    android:layout_height="wrap_content"
	                    android:background="@color/bgFormFieldsLight" />
	
	                <EditText
	                    android:id="@+id/postalCode"
	                    android:layout_width="match_parent"
	                    android:layout_height="wrap_content"
	                    android:hint="@string/hnt_postal_code"
	                    style="@style/FormsElements_editText" />
	
	                <CheckBox
	                    android:id="@+id/optIn"
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:layout_marginBottom="3dp"
	                    android:layout_marginTop="3dp"
	                    android:text="@string/btn_optIn"
	                    android:textColor="@color/bgBase" />
	
		            <Button
		                android:id="@+id/updateButton"
		                android:onClick="@string/dologin"
		                android:text="@string/btn_tag_modify"
			            style="@style/ButtonDarkForward"
			            android:layout_margin="16dp" />
	
	            </LinearLayout>
			</LinearLayout>
        </ScrollView>
    </LinearLayout>
    
    <!-- START ALERTA -->
	
	<Button
	    android:id="@+id/openSendAlertView"
	    android:layout_width="35dp"
	    android:layout_height="44dp"
	    android:minHeight="35dp"
	    android:minWidth="44dp"
	    android:layout_gravity="right|center"
	    android:background="@drawable/bg_emergency_button_init" />
	
	<LinearLayout
	    android:id="@+id/sendAlertView"
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent"
	    android:layout_gravity="right"
	    android:background="@drawable/toplayer85"
	    android:gravity="right"
	    android:visibility="gone" >
	
	    <LinearLayout
	        android:id="@+id/sendAlertButtonContainer"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_gravity="center_vertical"
	        android:background="@drawable/toplayer85"
	        android:gravity="center_horizontal|center_vertical|right"
	        android:visibility="visible" >

		<Button
		    android:id="@+id/sendAlertButton"
		    android:layout_width="131dp"
		    android:layout_height="44dp"
		    android:background="@drawable/bg_emergency_button_center"
		    android:gravity="center_vertical|left"
		    android:minHeight="44dp"
		    android:minWidth="131dp"
		    android:paddingLeft="44dp"
		    android:text="REPORTAR\nUNA EMERGENCIA"
		    android:textColor="@color/bgBase"
		    android:textSize="8sp" />
		
		<Button
		    android:id="@+id/closeSendAlertButton"
		    android:layout_width="22dp"
		    android:layout_height="44dp"
		    android:background="@drawable/bg_emergency_button_close"
		    android:gravity="center_vertical|right" />
		</LinearLayout>
	 
	</LinearLayout>
<!-- END ALERTA -->
</merge>