<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context=".LoginActivity" >

    <!-- Login progress -->

    <LinearLayout
        android:id="@+id/loginObjects"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="fill_vertical|fill_horizontal"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center_vertical"
            android:layout_marginBottom="60dp"
            android:background="@drawable/toplayer85"
            android:baselineAligned="true"
            android:gravity="center_horizontal|center_vertical"
            android:minWidth="250dp"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:id="@+id/loadingInfoText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp"
                android:text="@string/title_request_reset"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <Spinner
                android:id="@+id/documentType"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp"
                android:layout_marginTop="3dp"
                android:background="@color/bgBase" />

            <EditText
                android:id="@+id/documentNumber"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp"
                android:layout_marginTop="3dp"
                android:ems="10"
                android:hint="@string/hnt_doc_number"
                android:inputType="number"
                android:textColor="@color/bgBase"
                android:textSize="14sp"
                android:textStyle="normal" >

                <requestFocus />
            </EditText>

            <Button
                android:id="@+id/resetPasswordButton"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp"
                android:layout_marginTop="3dp"
                android:background="@drawable/btn_rojo_normal_holo_light"
                android:minHeight="40dp"
                android:onClick="@string/dologin"
                android:text="@string/btn_tag_reset_password"
                android:textColor="#ffffff"
                android:textSize="16sp" />

            <Button
                android:id="@+id/resetPasswordBack"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp"
                android:layout_marginTop="3dp"
                android:minHeight="40dp"
                android:onClick="@string/dologin"
                android:text="@string/btn_tag_reset_password_back"
                android:textColor="#ffffff"
                android:textSize="16sp" />

        </LinearLayout>

	</LinearLayout>

</merge>