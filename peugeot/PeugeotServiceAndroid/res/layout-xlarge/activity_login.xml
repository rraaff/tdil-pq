<merge xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context=".LoginActivity" xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:id="@+id/loginObjects"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/bg_ondas"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:padding="100dp" >

        <ImageView
            android:id="@+id/main_logo"
            style="@style/mainLogoAtLogin"
            android:layout_weight="1"
            android:contentDescription="@string/app_name"
            android:src="@drawable/main_logo" />

        <LinearLayout
            style="@style/LoginScreen"
            android:layout_marginTop="100dp" >

            <TextView
                android:id="@+id/loadingInfoText"
                style="@style/MainTitles"
                android:text="@string/menu_main_title" />



            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="25dp"
                android:background="@color/grayTabBase"
                android:padding="25dp" >

                <TableRow
                    android:id="@+id/tableIDType"
					style="fieldsetLike">

                    <TextView
                        android:id="@+id/labelIDType"
                        style="@style/Label"
                        android:text="@string/lbl_docType" />

                    <Spinner
                        android:id="@+id/documentType"
						style="@style/textFieldsOne" />
                </TableRow>

                <TableRow
                    android:id="@+id/tableIDNumber"
                    style="fieldsetLike">

                    <TextView
                        android:id="@+id/labelIdNumber"
						style="@style/Label"
                        android:text="@string/lbl_idNumber" />

                    <EditText
                        android:id="@+id/documentNumber"
                        android:hint="@string/lbl_idNumberSample"
                        android:inputType="number"
                        style="@style/textFieldsOne" />

                </TableRow>

                <TableRow
                    android:id="@+id/tablePassword"
                    style="fieldsetLike" >

                    <TextView
                        android:id="@+id/labelPassword"
                        style="@style/Label"
                        android:text="@string/lbl_password" />

                    <EditText
                        android:id="@+id/password"
                        android:hint="@string/hnt_doc_password"
                        android:inputType="textPassword"
                        style="@style/textFieldsOne" />

                </TableRow>

                <TableRow
                    android:id="@+id/tableRememberMe"
                    style="@style/fieldsetLike" >

                    <CheckBox
                        android:id="@+id/rememberPasswordCheckbox"
                        style="@style/Label"
                        android:layout_weight="1"
                        
						android:maxLines="1"
                        android:paddingRight="30dp"
                        android:text="@string/crt_tag_rememberme"
                        android:textAlignment="center"
                        android:textColor="@color/labels"
                        android:visibility="visible" />

                </TableRow>

            </TableLayout>

            <TableRow
                android:id="@+id/buttonWrapper"
                style="@style/buttonWrapper" >

                <Button
                    android:id="@+id/requestResetPassword"
                    style="@style/ButtonBackward"
                    android:text="@string/btn_tag_forgotpass" />

                <Button
                    android:id="@+id/loginButtons"
                    style="@style/ButtonForward"
                    android:onClick="@string/dologin"
                    android:text="@string/btn_tag_login" />

            </TableRow>

        </LinearLayout>

        <TextView
            android:id="@+id/appVersion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:text="TextView"
            android:textColor="@color/bgBase"
            android:textSize="8sp" />

	    <ImageView
	        android:id="@+id/placahome"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_gravity="bottom|center_horizontal"
	        android:layout_marginLeft="50dp"
	        android:layout_marginRight="50dp"
	        android:layout_weight="1"
	        android:adjustViewBounds="true"
	        android:contentDescription="@string/action_loading"
	        android:gravity="bottom|center_horizontal"
	        android:maxWidth="240dp"
	        android:src="@drawable/app_logo" />

    </LinearLayout>
</merge>