<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context=".SelectVehiclesForDealerActivity" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="horizontal" >

	    <LinearLayout
	        android:layout_width="fill_parent"
	        android:layout_height="fill_parent"
	        android:orientation="vertical" >

	        <LinearLayout
	            android:layout_width="match_parent"
	            android:layout_height="162dp"
	            android:orientation="vertical" >
	            
				<TableRow
				    android:id="@+id/signatureBar"
				    android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_weight="3"
					android:background="@drawable/ac_secondary_bar">

	                <LinearLayout
	                    android:layout_width="wrap_content"
	                    android:layout_height="81dp"
	                    android:layout_gravity="center_vertical|center_horizontal"
	                    android:layout_weight="1" >
	
	                    <ImageView
	                        android:id="@+id/gr_iso"
	                        android:layout_width="48dp"
	                        android:layout_height="48dp"
	                        android:layout_gravity="left|center_vertical"
	                        android:layout_margin="10dp"
	                        android:src="@drawable/iso"
	                        android:visibility="invisible" />
	
	                    <ImageView
	                        android:id="@+id/gr_signature"
	                        android:layout_width="0dp"
	                        android:layout_height="wrap_content"
	                        android:layout_gravity="center_horizontal|center_vertical"
	                        android:layout_marginLeft="160dp"
	                        android:layout_marginRight="160dp"
	                        android:layout_weight="1"
	                        android:src="@drawable/signature" />
	
	                    <ImageView
	                        android:id="@+id/gr_userIcon"
	                        android:layout_width="48dp"
	                        android:layout_height="48dp"
	                        android:layout_gravity="center_vertical|right"
	                        android:layout_margin="10dp"
	                        android:src="@drawable/icon_user"
	                        android:visibility="invisible" />
	                </LinearLayout>
	            </TableRow>
			</LinearLayout>

	        <LinearLayout
	            android:layout_width="match_parent"
	            android:layout_height="fill_parent"
	            android:layout_weight="1"
	            android:background="@color/bgBaseGray"
	            android:orientation="vertical" >

		        <TextView
		            android:id="@+id/TextView01"
		            android:text="@string/lst_title_dealers"
		            style="@style/FormTitles" />
		
		        <TextView
		            android:id="@+id/dealerNameTextView"
		            style="@style/FormsElements_editText"
		            android:layout_width="fill_parent"
		            android:layout_height="wrap_content"
		            android:layout_marginLeft="15dp"
		            android:layout_marginRight="15dp"
		            android:layout_weight="0"
		            android:text="..." />
		
		        <TextView
		            android:id="@+id/dealerAddressTextView"
		            style="@style/FormsElements_editText"
		            android:layout_width="fill_parent"
		            android:layout_height="wrap_content"
		            android:layout_marginLeft="15dp"
		            android:layout_marginRight="15dp"
		            android:layout_weight="0"
		            android:text="..." />
		        
		        <Spinner
		            android:id="@+id/vehiclesForDealersSpinner"
		            android:layout_width="match_parent"
		            android:layout_height="wrap_content"
		            android:layout_marginBottom="5dp"
		            android:layout_marginLeft="15dp"
		            android:layout_marginRight="15dp"
		            android:layout_marginTop="5dp"
		            android:layout_weight="0"
		            android:background="@color/bgFormFieldsLight" />
		
		        <EditText
		            android:id="@+id/emailForServiceEditText"
		            style="@style/FormsElements_editText"
		            android:layout_width="match_parent"
		            android:layout_height="wrap_content"
		            android:layout_marginLeft="15dp"
		            android:layout_marginRight="15dp"
		            android:layout_weight="0"
		            android:clickable="false"
		            android:hint="@string/hnt_email"
		            android:inputType="textEmailAddress" >
		
		            <requestFocus />
		        </EditText>
		
		        <CheckBox
		            android:id="@+id/notReceiveAlertsCheckbox"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_margin="15dp"
		            android:layout_marginLeft="15dp"
		            android:layout_marginRight="15dp"
		            android:text="@string/notReceiveAlerts"
		            android:textColor="@color/bgBase" />

		        <CheckBox
		            android:id="@+id/notDealerAlertsCheckbox"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_margin="15dp"
		            android:text="@string/notDealerAlerts"
		            android:textColor="@color/bgBase" />
		
		        <Button
		            android:id="@+id/updateVehiclesDealersButton"
		            style="@style/ButtonDarkForward"
		            android:layout_width="fill_parent"
		            android:layout_marginBottom="60dp"
		            android:layout_marginLeft="15dp"
		            android:layout_marginRight="15dp"
		            android:layout_marginTop="25dp"
		            android:onClick="@string/dologin"
		            android:text="@string/btn_select_for_my_services" />

			</LinearLayout>

	        <LinearLayout
	            android:layout_width="match_parent"
	            android:layout_height="160dp"
	            android:orientation="vertical" >

				<include layout="@layout/footer" />

			</LinearLayout>

		</LinearLayout>
    </LinearLayout>
</merge>