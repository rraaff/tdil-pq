<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context=".SearchDealersActivity" >

    <LinearLayout
        android:id="@+id/loginObjects"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="horizontal" >

	    <LinearLayout
	        android:layout_width="fill_parent"
	        android:layout_height="fill_parent"
	        android:orientation="vertical" >

	        <LinearLayout
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:orientation="vertical" >
	            
	            <TableRow
	                android:id="@+id/signatureBar"
	                android:layout_width="wrap_content"
	                android:layout_height="140dp"
	                android:background="@drawable/ac_secondary_bar" >
	
	                <LinearLayout
	                    android:layout_width="wrap_content"
	                    android:layout_height="140dp"
	                    android:layout_gravity="center_vertical|center_horizontal"
	                    android:layout_weight="1" >
	
	                    <ImageView
	                        android:id="@+id/gr_iso"
	                        android:layout_width="48dp"
	                        android:layout_height="48dp"
	                        android:layout_gravity="left|center_vertical"
	                        android:layout_margin="10dp"
	                        android:src="@drawable/iso"
	                        android:visibility="invisible" />
	
	                    <ImageView
	                        android:id="@+id/gr_signature"
	                        android:layout_width="0dp"
	                        android:layout_height="wrap_content"
	                        android:layout_gravity="center_horizontal|center_vertical"
	                        android:layout_marginLeft="60dp"
	                        android:layout_marginRight="60dp"
	                        android:layout_weight="1"
	                        android:src="@drawable/signature" />
	
	                    <ImageView
	                        android:id="@+id/gr_userIcon"
	                        android:layout_width="48dp"
	                        android:layout_height="48dp"
	                        android:layout_gravity="center_vertical|right"
	                        android:layout_margin="10dp"
	                        android:src="@drawable/icon_user"
	                        android:visibility="invisible" />
	
	                </LinearLayout>
	
	            </TableRow>
			</LinearLayout>

	        <LinearLayout
	            android:layout_width="match_parent"
	            android:layout_height="fill_parent"
	            android:layout_weight="1"
	            android:background="@color/bgBaseGray"
	            android:orientation="vertical" >

				<TextView
				    android:id="@+id/loadingInfoText"
				    style="@style/FormTitles"
				    android:paddingLeft="25dp"
				    android:paddingRight="25dp"
				    android:paddingTop="50dp"
				    android:text="@string/title_activity_search_dealers_large"
				    android:textSize="25sp" />

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lineSpacingExtra="5dp"
                    android:paddingBottom="25dp"
                    android:paddingLeft="25dp"
                    android:paddingRight="25dp"
                    android:text="@string/title_activity_search_dealers_bajada"
                    android:textColor="@color/bgFormFieldsLight"
                    android:textSize="18sp" />
	                    
				<Spinner
				    android:id="@+id/dealersStatesSpinner"
				    style="@style/FormsElements_editText"
				    android:layout_width="match_parent"
				    android:layout_height="wrap_content"
				    android:layout_marginBottom="10dp"
				    android:layout_marginLeft="25dp"
				    android:layout_marginRight="25dp"
				    android:layout_marginTop="10dp"
				    android:layout_weight="0"
				    android:background="@color/bgFormFieldsLight"
				    android:padding="10dp"
				    android:textSize="18sp" />
				
				<Spinner
				    android:id="@+id/dealersCitiesSpinner"
				    style="@style/FormsElements_editText"
				    android:layout_width="match_parent"
				    android:layout_height="wrap_content"
				    android:layout_marginBottom="10dp"
				    android:layout_marginLeft="25dp"
				    android:layout_marginRight="25dp"
				    android:layout_marginTop="10dp"
				    android:layout_weight="0"
				    android:textSize="18sp"
				    android:padding="10dp"
				    android:background="@color/bgFormFieldsLight" />
			
				<Button
				    android:id="@+id/searchDealersButton"
				    style="@style/ButtonDarkForward"
				    android:layout_width="fill_parent"
				    android:layout_height="wrap_content"
				    android:layout_marginBottom="60dp"
				    android:layout_marginLeft="25dp"
				    android:layout_marginRight="25dp"
				    android:layout_marginTop="50dp"
				    android:textSize="25sp"
				    android:onClick="@string/dologin"
				    android:text="@string/btn_search_dealers" />

			</LinearLayout>

	        <LinearLayout
	            android:layout_width="match_parent"
	            android:layout_height="120dp"
	            android:orientation="vertical" >

				<include layout="@layout/footer" />

			</LinearLayout>

		</LinearLayout>
    </LinearLayout>
</merge>