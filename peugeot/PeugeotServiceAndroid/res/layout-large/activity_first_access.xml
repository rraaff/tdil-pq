<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context=".ServicesDashboardActivity" >

    <LinearLayout
        android:id="@+id/loginObjects"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/bg_ondas"
        android:gravity="center_vertical"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight=".2"
            android:gravity="center_vertical" >

            <ImageView
                android:id="@+id/main_logo"
                style="@style/mainLogoAtLogin"
                android:layout_width="wrap_content"
                android:layout_margin="0dp"
                android:contentDescription="@string/app_name"
                android:src="@drawable/main_logo" />

        </LinearLayout>

        <LinearLayout
            style="@style/LoginScreen"
            android:layout_width="wrap_content"
            android:layout_gravity="top|center_horizontal"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_weight="0.02" >
            
            <TextView
                android:id="@+id/loadingInfoText"
                style="@style/MainTitles"
                android:text="@string/title_activity_first_access"
                android:textSize="36sp" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@color/grayTabBase"
                    android:padding="25dp" >

                    <TextView
                        android:id="@+id/textView1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:lineSpacingExtra="8dp"
                        android:text="@string/cmnt_text_first_access"
                        android:textSize="16sp" />

                </LinearLayout>

            </LinearLayout>

            <TableRow
                android:id="@+id/buttonWrapper"
                style="@style/buttonWrapper"
                android:layout_height="wrap_content" >

                <Button
                    android:id="@+id/notClientButton"
                    style="@style/ButtonBackward"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:lines="1"
                    android:paddingBottom="10dp"
                    android:paddingLeft="0dp"
                    android:paddingRight="0dp"
                    android:paddingTop="10dp"
                    android:textSize="18sp"
                    android:onClick="@string/dologin"
                    android:text="@string/btn_not_client" />

                <Button
                    android:id="@+id/alreadyClientButton"
                    style="@style/ButtonForward"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:layout_weight="1"
                    android:lines="1"
                    android:paddingBottom="10dp"
                    android:paddingLeft="0dp"
                    android:paddingRight="0dp"
                    android:paddingTop="10dp"
                    android:textSize="18sp"
                    android:onClick="@string/dologin"
                    android:text="@string/btn_already_client" />

            </TableRow>

		</LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight=".2"
            android:gravity="center_vertical" >

            <ImageView
                android:id="@+id/placahome"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:layout_margin="30dp"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:contentDescription="@string/action_loading"
                android:gravity="bottom|center_horizontal"
                android:maxWidth="240dp"
                android:src="@drawable/app_logo" />

        </LinearLayout>

    </LinearLayout>
</merge>