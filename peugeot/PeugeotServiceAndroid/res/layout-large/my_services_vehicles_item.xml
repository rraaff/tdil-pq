<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:background="@color/bgBaseGray"
    android:paddingTop="0dip"
    android:stretchColumns="1" >

	<TableRow
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:clickable="true" >

		<LinearLayout
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_gravity="left|center_vertical"
		    android:layout_margin="8dp"
		    android:layout_weight="8"
		    android:orientation="vertical"
		    android:paddingTop="0dip" >

			<TableRow 
			    android:layout_width="fill_parent"
			    android:layout_height="wrap_content">
			
				<TextView
				    android:id="@+id/vehicleDescription"
				    android:layout_width="fill_parent"
				    android:layout_height="wrap_content"
				    android:layout_gravity="left|center_vertical"
				    android:layout_margin="8dp"
				    android:layout_span="1"
				    android:layout_weight="1"
				    android:text="CZP075 (RCZ)"
				    android:textAllCaps="true"
				    android:textColor="@color/bgBase"
				    android:textSize="30sp" />

			</TableRow>

			<LinearLayout
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_marginLeft="8dp"
			    android:orientation="horizontal" >
				
				<TextView
				    android:id="@+id/kmLabel"
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:layout_marginRight="2dp"
				    android:layout_marginTop="2dp"
				    android:text="@string/lst_itm_km"
				    android:textColor="@color/bgBase"
				    android:textSize="18sp" />
				
				<TextView
				    android:id="@+id/kmActual"
				    android:layout_width="fill_parent"
				    android:layout_height="wrap_content"
				    android:layout_marginRight="10dp"
				    android:layout_marginTop="2dp"
				    android:text="100,000"
				    android:textColor="@color/bgBase"
				    android:textSize="18sp" />

				<TextView
				    android:id="@+id/TextView01"
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:layout_marginRight="2dp"
				    android:layout_marginTop="2dp"
				    android:text="@string/lst_itm_needs_service"
				    android:textColor="@color/bgBase"
				    android:textSize="18sp" />

				<TextView
				    android:id="@+id/needsService"
				    android:layout_width="fill_parent"
				    android:layout_height="wrap_content"
				    android:layout_marginTop="2dp"
				    android:text="Si"
				    android:textColor="@color/bgBase"
				    android:textSize="18sp" />

			</LinearLayout>

			<LinearLayout
			    android:layout_width="fill_parent"
			    android:layout_height="wrap_content"
			    android:layout_marginLeft="8dp"
			    android:orientation="horizontal" >
			    
				<TextView
				    android:id="@+id/lastServiceLabel"
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:layout_marginRight="2dp"
				    android:layout_marginTop="2dp"
				    android:text="@string/lst_itm_last_service"
				    android:textColor="@color/bgBase"
				    android:textSize="18sp" />
					
				<TextView
				    android:id="@+id/lastServiceDate"
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:layout_marginRight="10dp"
				    android:layout_marginTop="2dp"
				    android:text="2013-05-04"
				    android:textColor="@color/bgBase"
				    android:textSize="18sp" />

				<TextView
				    android:id="@+id/TextView02"
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:layout_marginRight="2dp"
				    android:layout_marginTop="2dp"
				    android:text="@string/lst_itm_km"
				    android:textColor="@color/bgBase"
				    android:textSize="18sp" />

				<TextView
				    android:id="@+id/lastServiceKm"
				    android:layout_width="fill_parent"
				    android:layout_height="wrap_content"
				    android:layout_marginTop="2dp"
				    android:text="137,123"
				    android:textColor="@color/bgBase"
				    android:textSize="18sp" />
	     
			</LinearLayout>
		</LinearLayout>

		<LinearLayout
		    android:layout_width="0dp"
		    android:layout_height="fill_parent"
		    android:layout_marginRight="8dp"
		    android:layout_weight="1"
		    android:gravity="center_vertical"
		    android:orientation="vertical" >

			<ImageButton
			    android:id="@+id/goToAddService"
			    android:layout_width="36dp"
			    android:layout_height="36dp"
			    android:layout_gravity="center_vertical|center_horizontal"
			    android:background="@drawable/ic_ac_forward_white"
			    android:contentDescription="@string/btn_tag_go" />

		</LinearLayout>

	</TableRow>

</TableLayout>