<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context=".ActivityHomeAlarms" >

    <LinearLayout
        android:id="@+id/lohome_format"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" >

        <TableRow
            android:id="@+id/incl"
            style="@style/format_page_3rows1col_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <include
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                layout="@layout/inlohome_application_fullmenu" />

        </TableRow>

        <include
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            layout="@layout/inlohome_application_submenu" />

        <TableRow
            android:id="@+id/tableRow2"
            style="@style/format_page_3rows1col_middle"
            android:layout_width="fill_parent"
            android:layout_height="0dip"
            android:layout_weight=".97" >

            <ScrollView
                android:id="@+id/scrollView1"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" >
                
				<LinearLayout
					android:id="@+id/tab1"
				    android:layout_width="fill_parent"
				    android:layout_height="wrap_content"
				    android:layout_gravity="top"
				    android:orientation="vertical" >

				    <TableRow
				        android:layout_width="fill_parent"
				        android:layout_height="wrap_content" >
				        
				        <LinearLayout
				            style="@style/title_dashboard_container">
				            
				            <com.tdil.thalamus.android.gui.components.StyledTextView
				                android:id="@+id/alarmDescription"
				                style="@style/title_dashboard"
				                android:text="@string/title_dashboard_alarms" />
				            
							<com.tdil.thalamus.android.gui.components.StyledTextView
							    android:id="@+id/alarmStatus"
							    style="@style/title_dashboard_state"
							    android:text="@string/status_unknown" />

				        </LinearLayout>

			        </TableRow>

				    <TableRow
						android:layout_width="fill_parent"
						android:layout_height="wrap_content">

						<LinearLayout
						    style="@style/toggle_button_container" >

                            <com.tdil.thalamus.android.gui.components.StyledToggleButton
                                android:id="@+id/btnToggleAlarm"
                                android:layout_width="match_parent"
                                android:layout_height="48dp"
                                android:layout_marginBottom="2dp"
                                android:layout_marginTop="2dp"
                                android:background="@color/bgBase"
                                android:drawableRight="@drawable/btn_toggle_fake_switch"
                                android:gravity="center_vertical|left"
                                android:paddingLeft="20dp"
                                android:textOff="Armar alarma"
                                android:textOn="Desarmar alarma"
                                android:textSize="20sp" />
					    
						</LinearLayout>
			
				    </TableRow>

                    <TableRow
                        style="@style/data_indashboard_container" >

                        <com.tdil.thalamus.android.gui.components.StyledTextView
                            android:id="@+id/loadingInfoText"
                            style="@style/label_indash"
                            android:text="@string/lst_itm_last_change_fullword" />

                        <com.tdil.thalamus.android.gui.components.StyledTextView
                            android:id="@+id/lastChangeDate"
                            style="@style/label_data_indash"
                            android:text="2013-05-04 18:20" />

                        <com.tdil.thalamus.android.gui.components.StyledTextView
                            android:id="@+id/lastChangeStatus"
                            style="@style/label_data_indash"
                            android:paddingLeft="25dp"
                            android:text="@string/status_armed" />

                        <com.tdil.thalamus.android.gui.components.StyledTextView
                            android:id="@+id/textView3"
                            style="@style/label_indash"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:text="@string/lst_itm_by" />

                        <com.tdil.thalamus.android.gui.components.StyledTextView
                            android:id="@+id/lastChangeUser"
                            style="@style/label_data_indash"
                            android:paddingLeft="0dp"
                            android:text="@string/status_unknown" />

                    </TableRow>

					<TableRow
					    android:layout_width="fill_parent"
					    android:layout_height="2dp"
					    android:background="@color/grayLightBase" >
					   
					</TableRow>

					<TableRow
					    android:layout_width="fill_parent"
					    android:layout_height="wrap_content"
					    android:background="@color/bgBase"
					    android:gravity="left"
					    android:textAlignment="viewStart" >

                        <com.tdil.thalamus.android.gui.components.StyledButton
                            android:id="@+id/goToAlarmViewLog"
                            style="@style/ButtonLoginList"
                            android:text="@string/btn_view_log" />

                    </TableRow>

					<TableRow
					    android:layout_width="fill_parent"
					    android:layout_height="2dp"
					    android:background="@color/grayLightBase" >
					   
					</TableRow>
					
					<TableRow
					    android:layout_width="fill_parent"
					    android:layout_height="wrap_content"
					    android:background="@color/bgBase"
					    android:gravity="left"
					    android:textAlignment="viewStart" >

                        <com.tdil.thalamus.android.gui.components.StyledButton
                            android:id="@+id/goToAgenda"
                            style="@style/ButtonAgendainList"
                            android:text="@string/btn_agendas_list" />

                    </TableRow>
                    
					<TableRow
					    android:layout_width="fill_parent"
					    android:layout_height="2dp"
					    android:background="@color/grayLightBase" >
					   
					</TableRow>

                </LinearLayout>
                
			</ScrollView>

        </TableRow>

        <TableRow
            android:id="@+id/tableRow3"
            style="@style/format_page_3rows1col_footer" >

            <include layout="@layout/footer_forhome" />
        </TableRow>
    </LinearLayout>
</merge>