<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:stretchColumns="1" >

	<LinearLayout style="@style/row_twocols_container" >
	    

		<LinearLayout style="@style/row_innercolumn_container" >
                 
            <LinearLayout
			    android:layout_width="wrap_content"
			    android:layout_height="match_parent"
			    android:gravity="center_horizontal|center_vertical" >

                <com.tdil.thalamus.android.gui.components.StyledToggleButton
                    android:id="@+id/alarmStatusSwitch"
                    style="@style/toggleSwitchIOSish"
                    android:textOff=" "
					android:textOn=" "  />

		    </LinearLayout>
		        
		    <LinearLayout style="@style/row_innercontent" >
		        
		        
		        
		        <LinearLayout style="@style/gen_fil_and_wrap" >

					<LinearLayout
					    android:layout_width="wrap_content"
					    android:layout_height="match_parent"
					    android:gravity="center_horizontal|center_vertical" >
				    </LinearLayout>

					<com.tdil.thalamus.android.gui.components.StyledTextView
					    android:id="@+id/lightAgendaDescriptionTextView"
					    style="@style/item_title_01"
					    android:paddingLeft="0dp"
					    android:text="Alarma cochera" />
					
				</LinearLayout>

				<LinearLayout
				    style="@style/row_innerrow_data_container"
				    android:paddingBottom="10dp" >

				<com.tdil.thalamus.android.gui.components.StyledTextView
					    android:id="@+id/luTextView"
					    android:layout_width="wrap_content"
			   			android:layout_height="wrap_content"
					    android:text="Lu," />
				    <com.tdil.thalamus.android.gui.components.StyledTextView
					    android:id="@+id/maTextView"
					    android:layout_width="wrap_content"
			   			android:layout_height="wrap_content"
					    android:text="Ma," />
				    <com.tdil.thalamus.android.gui.components.StyledTextView
					    android:id="@+id/miTextView"
					    android:layout_width="wrap_content"
			   			android:layout_height="wrap_content"
					    android:text="Mi," />
				    <com.tdil.thalamus.android.gui.components.StyledTextView
					    android:id="@+id/juTextView"
					    android:layout_width="wrap_content"
			   			android:layout_height="wrap_content"
					    android:text="Ju," />
				    <com.tdil.thalamus.android.gui.components.StyledTextView
					    android:id="@+id/viTextView"
					    android:layout_width="wrap_content"
			   			android:layout_height="wrap_content"
					    android:text="Vi," />
				    <com.tdil.thalamus.android.gui.components.StyledTextView
					    android:id="@+id/saTextView"
					    android:layout_width="wrap_content"
			   			android:layout_height="wrap_content"
					    android:text="Sa," />
				    <com.tdil.thalamus.android.gui.components.StyledTextView
					    android:id="@+id/doTextView"
					    android:layout_width="wrap_content"
			   			android:layout_height="wrap_content"
					    android:text="Do" />
				</LinearLayout>

				<LinearLayout style="@style/row_innerrow_data_container" >
	
				</LinearLayout>
			</LinearLayout>
		</LinearLayout>
		
		<LinearLayout
		    style="@style/row_innercolumn_containerImageSmall"
		    android:layout_width="wrap_content" >

			<LinearLayout
			    android:layout_width="wrap_content"
			    android:layout_height="match_parent" >

				<ImageButton
				    android:id="@+id/lightAgendaGoToDashboard"
				    style="@style/icon_inrow_go" />

			</LinearLayout>

		</LinearLayout>

	</LinearLayout>

</TableLayout>