<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context=".LoginActivity" >

    <LinearLayout
        android:id="@+id/loginObjects"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/main_square"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:gravity="center_vertical|center_horizontal"
            android:layout_marginTop="20dp"
            android:background="@drawable/toplayer85"
            android:maxWidth="300dp"
            android:minWidth="250dp"
            android:orientation="vertical"
            android:padding="20dp"
			android:textAlignment="center" >

            <TextView
                android:id="@+id/loadingInfoText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp"
                android:text="@string/title_activity_login"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/orangeTitles" />

            <!--                 android:spinnerMode="dropdown"
                tools:listitem="@android:layout/simple_spinner_item"  
                @android:style/Widget.Holo.Light.Spinner
                -->
            
            <Spinner
                android:id="@+id/documentType"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp"
                android:layout_marginTop="3dp" />

            <EditText
                android:id="@+id/documentNumber"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp"
                android:layout_marginTop="3dp"
                android:ems="10"
                android:hint="@string/hnt_doc_number"
                android:inputType="number"
                android:textAlignment="center"
                android:textColor="@color/bgBase"
                android:textColorLink="@color/orangeTitles"
                android:textSize="14sp"
                android:textStyle="normal" >

                <requestFocus />
            </EditText>

            <EditText
                android:id="@+id/password"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp"
                android:layout_marginTop="3dp"
                android:ems="10"
                android:hint="@string/hnt_doc_password"
                android:inputType="textPassword"
                android:textColor="@color/bgBase"
                android:textColorLink="@color/orangeTitles"
                android:textSize="14sp"
                android:textStyle="normal" />

            <Button
                android:id="@+id/loginButtons"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp"
                android:layout_marginTop="3dp"
                android:background="@drawable/btn_rojo_normal_holo_light"
                android:minHeight="40dp"
                android:onClick="@string/dologin"
                android:text="@string/btn_tag_login"
                android:textColor="#ffffff"
                android:textSize="16sp" />

            <CheckBox
                android:id="@+id/rememberPasswordCheckbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp"
                android:layout_marginTop="3dp"
                android:paddingRight="30dp"
                android:text="@string/crt_tag_rememberme"
                android:textColor="#F2F2F2"
                android:textSize="12sp"
                android:visibility="visible" />

            <Button
                android:id="@+id/requestResetPassword"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp"
                android:layout_marginTop="3dp"
                android:focusable="false"
                android:minHeight="24dp"
                android:text="@string/btn_tag_forgotpass"
                android:textColor="#ffffff"
                android:textSize="14sp"
                android:visibility="visible" />

			<Button
			    android:id="@+id/requestRegistration"
			    style="?android:attr/buttonStyleSmall"
			    android:layout_width="fill_parent"
			    android:layout_height="wrap_content"
			    android:layout_marginBottom="3dp"
			    android:layout_marginTop="3dp"
			    android:focusable="false"
			    android:minHeight="24dp"
			    android:text="@string/btn_tag_register"
			    android:textColor="#ffffff"
			    android:textSize="14sp"
			    android:visibility="visible" />

        </LinearLayout>

        <ImageView
            android:id="@+id/placahome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginTop="5dp"
            android:adjustViewBounds="true"
            android:baselineAlignBottom="true"
            android:contentDescription="@string/action_loading"
            android:maxWidth="250dp"
            android:src="@drawable/logo_lojack" />

    </LinearLayout>

</merge>