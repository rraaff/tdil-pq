<merge xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    tools:context=".LoginActivity" >

    <LinearLayout
        android:id="@+id/loginObjects"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/main_square"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:padding="15dp" >

        <TableRow
            android:id="@+id/tableRow1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal" >

            <ImageView
                android:id="@+id/ImageView01"
                android:layout_width="120dp"
                android:layout_height="80dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="20dp"
                android:adjustViewBounds="false"
                android:baselineAlignBottom="false"
                android:contentDescription="@string/action_loading"
                android:src="@drawable/img_logo_lojack" />

        </TableRow>

        <TableRow
            android:id="@+id/tableRow2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/bgBase"
                android:gravity="center_vertical|center_horizontal"
                android:maxWidth="300dp"
                android:orientation="vertical"
                android:padding="10dp"
                android:textAlignment="center" >

                <TextView
                    android:id="@+id/loadingInfoText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="3dp"
                    android:text="@string/title_activity_login"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/orangeTitles" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/metal-texture"
                    android:orientation="vertical"
                    android:padding="5dp" >

                    <Spinner
                        android:id="@+id/documentType"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="3dp"
                        android:layout_marginTop="3dp" />

                    <EditText
                        android:id="@+id/documentNumber"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="3dp"
                        android:layout_marginTop="3dp"
                        android:ems="10"
                        android:hint="@string/hnt_doc_number"
                        android:inputType="number"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textColorLink="@color/orangeTitles"
                        android:textSize="14sp"
                        android:textStyle="normal" />

                    <EditText
                        android:id="@+id/password"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="3dp"
                        android:layout_marginTop="3dp"
                        android:ems="10"
                        android:hint="@string/hnt_doc_password"
                        android:inputType="textPassword"
                        android:textColor="@color/black"
                        android:textColorLink="@color/orangeTitles"
                        android:textSize="14sp"
                        android:textStyle="normal" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" >

                        <CheckBox
                            android:id="@+id/rememberPasswordCheckbox"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="3dp"
                            android:layout_marginTop="3dp"
                            android:text="@string/crt_tag_rememberme"
                            android:textColor="@color/black"
                            android:textSize="13sp"
                            android:visibility="visible" />

                        <Button
                            android:id="@+id/requestResetPassword"
                            style="?android:attr/buttonStyleSmall"
                            android:layout_width="wrap_content"
                            android:layout_height="36dp"
                            android:layout_marginLeft="24dp"
                            android:background="@drawable/transparente"
                            android:drawableLeft="@drawable/btn_gris"
                            android:focusable="false"
                            android:minHeight="24dp"
                            android:text="@string/btn_tag_forgotpass"
                            android:textAllCaps="true"
                            android:textColor="@color/bgBaseGray"
                            android:textSize="12sp"
                            android:visibility="visible" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/appVersion"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="TextView"
                        android:textSize="8sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <Button
                        android:id="@+id/requestRegistration"
                        android:layout_width="wrap_content"
                        android:layout_height="36dp"
                        android:layout_gravity="left"
                        android:layout_marginBottom="3dp"
                        android:layout_marginTop="3dp"
                        android:background="@drawable/transparente"
                        android:drawableLeft="@drawable/btn_rojo"
                        android:focusable="false"
                        android:minHeight="24dp"
                        android:text="@string/btn_tag_register"
                        android:textColor="@color/bgBaseGray"
                        android:textSize="12sp"
                        android:visibility="visible" />

                    <Button
                        android:id="@+id/loginButtons"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_marginBottom="3dp"
                        android:layout_marginTop="3dp"
                        android:background="@drawable/btn_ingresar"
                        android:drawableLeft="@drawable/ "
                        android:minHeight="36"
                        android:onClick="@string/dologin"
                        android:text="@string/btn_tag_login"
                        android:textColor="#ffffff"
                        android:textSize="16sp" />

                </LinearLayout>
            </LinearLayout>

        </TableRow>

        <TableRow
            android:id="@+id/tableRow3"
            android:layout_width="match_parent"
            android:layout_height="91dp"
            android:layout_margin="0dp"
            android:padding="0dp" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/main_promo_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="@string/rd_main_promo_title"
                    android:textAlignment="center"
                    android:textColor="@color/bgBase"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/main_hookline"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dp"
                    android:text="@string/rd_main_hookline"
                    android:textAlignment="center"
                    android:textColor="@color/bgBase"
                    android:textSize="12sp" />
            </LinearLayout>
        </TableRow>

    </LinearLayout>
</merge>