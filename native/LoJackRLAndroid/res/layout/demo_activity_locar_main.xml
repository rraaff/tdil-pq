<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context=".DemoActivityCars" >

    <LinearLayout
        android:id="@+id/lohome_format"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" >

        <TableRow
            android:id="@+id/tableRow1"
            style="@style/format_page_3rows1col_header" >

            <include layout="@layout/inlocar_application_fullmenu" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow2"
            style="@style/format_page_3rows1col_middle"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginTop="0dp"
            android:layout_weight=".97" >

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="bottom" >

                <ImageView
                    android:id="@+id/main_backgroundImage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:contentDescription="@string/default_image_descriptor"
                    android:scaleType="centerCrop"
                    android:src="@drawable/demo_map" />

                <TableRow
                    android:id="@+id/tableRow4"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/toplayer85"
                    android:gravity="center_horizontal" >

                    <ImageButton
                        android:id="@+id/imageButton1"
                        style="@style/btn_cars"
                        android:layout_height="48dp"
                        android:contentDescription="@string/action_home"
                        android:padding="10dp"
                        android:src="@drawable/ic_cars_position_off" />

                    <ImageButton
                        android:id="@+id/imageButton2"
                        style="@style/btn_cars"
                        android:src="@drawable/ic_cars_velocidades_off" />
                    
                    <ImageButton
                        android:id="@+id/imageButton3"
                        style="@style/btn_cars"
                        android:src="@drawable/ic_cars_zone_off" />
                    
                    <ImageButton
                        android:id="@+id/imageButton4"
                        style="@style/btn_cars"
                        android:src="@drawable/ic_cars_telefonos_off" />
                    
                    <ImageButton
                        android:id="@+id/imageButton5"
                        style="@style/btn_cars"
                        android:src="@drawable/ic_cars_recorridos_off" />
                    
                    <ImageButton
                        android:id="@+id/imageButton6"
                        style="@style/btn_cars"
                        android:src="@drawable/ic_cars_estacioname_off" />

                </TableRow>

            </RelativeLayout>

        </TableRow>

        <TableRow
            android:id="@+id/tableRow3"
            style="@style/format_page_3rows1col_footer" >

            <include layout="@layout/footer_forcar" />
        </TableRow>
    </LinearLayout>
</merge>