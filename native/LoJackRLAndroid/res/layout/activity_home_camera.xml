<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context=".HomeActivity" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/main_square"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/cameraView"
            android:layout_width="fill_parent"
            android:layout_height="0dip"
            android:layout_gravity="top|center_horizontal"
            android:layout_weight="1"
            android:background="@color/bgBase"
            android:contentDescription="@string/desc_cam_image" />

        <LinearLayout
            style="@attr/tabLayout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@color/bgCream"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:padding="10dp" >

            <TableLayout
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_gravity="center_vertical|center_horizontal"
                android:background="@drawable/jstk_background"
                android:gravity="center_vertical|clip_horizontal" >

                <TableRow
                    android:id="@+id/tableRow1"
                    android:layout_width="fill_parent"
                    android:layout_height="16dp"
                    android:gravity="center_horizontal" >

                    <RelativeLayout
                        android:layout_width="65dp"
                        android:layout_height="16dp"
                        android:layout_gravity="bottom|center_vertical"
                        android:gravity="center_horizontal" >
                        
	                    <Button
	                        android:id="@+id/upButton"
							android:layout_width="16dp"
	                        android:layout_height="16dp"
	                        android:layout_alignParentBottom="true"
	                        android:layout_alignParentRight="true"
	                        android:background="@drawable/jstk_item_up"
	                        android:text="@string/btn_cam_up" />
	                </RelativeLayout>
                </TableRow>

                <TableRow
                    android:id="@+id/tableRow2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >
                    
					<RelativeLayout
					    android:layout_width="65dp"
					    android:layout_height="16dp"
					    android:layout_gravity="bottom|center_vertical"
					    android:layout_marginBottom="8dp"
					    android:layout_marginTop="8dp"
					    android:gravity="fill_horizontal" >
	                    
	                    <Button
	                        android:id="@+id/leftButton"
	                        android:layout_width="16dp"
	                        android:layout_height="16dp"
	                        android:layout_alignParentLeft="true"
	                        android:background="@drawable/jstk_item_left"
	                        android:text="@string/btn_cam_left" />
	
	                    <Button
	                        android:id="@+id/rightButton"
	                        android:layout_width="16dp"
	                        android:layout_height="16dp"
	                        android:layout_alignParentRight="true"
	                        android:background="@drawable/jstk_item_right"
	                        android:text="@string/btn_cam_right" />

	                </RelativeLayout>
                </TableRow>

                <TableRow
                    android:id="@+id/tableRow3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal" >

                    <RelativeLayout
                        android:layout_width="65dp"
                        android:layout_height="16dp"
                        android:layout_gravity="bottom|center_vertical"
                        android:gravity="center_horizontal" >

	                    <Button
	                        android:id="@+id/downButton"
	                        android:layout_width="16dp"
	                        android:layout_height="16dp"
	                        android:layout_alignParentBottom="true"
	                        android:layout_alignParentRight="true"
	                        android:background="@drawable/jstk_item_down"
	                        android:text="@string/btn_cam_down" />
	                    
					</RelativeLayout>
					
                </TableRow>
                
            </TableLayout>

        </LinearLayout>

        <ImageView
            android:id="@+id/placahome"
            android:layout_width="wrap_content"
            android:layout_height="103dp"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginTop="20dp"
            android:baselineAlignBottom="true"
            android:contentDescription="@string/action_loading"
            android:maxWidth="250dp"
            android:src="@drawable/logo_lojack" />

    </LinearLayout>

</merge>