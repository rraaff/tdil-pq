<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context=".DemoActivityCars" >

    <LinearLayout
        android:id="@+id/lohome_format"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" >

        <TableRow
            android:id="@+id/tableRow"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_weight=".05"
            android:background="@drawable/bg_logoredbar"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_gravity="center_vertical|center_horizontal"
                android:layout_weight="1"
                android:src="@drawable/logo_lojack_forheader" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow2"
            style="@style/format_page_3rows1col_middle"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight=".97" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical" >

                <com.tdil.thalamus.android.gui.components.StyledCheckbox
                    android:id="@+id/lojackConf"
                    style="@style/checkbox_white_01"
                    android:text="@string/btn_lojack_notif_conf" />

                <com.tdil.thalamus.android.gui.components.StyledCheckbox
                    android:id="@+id/carConf"
                    style="@style/checkbox_white_01"
                    android:text="@string/btn_car_notif_conf" />

                <com.tdil.thalamus.android.gui.components.StyledCheckbox
                    android:id="@+id/homeConf"
                    style="@style/checkbox_white_01"
                    android:text="@string/btn_home_notif_conf" />
                <com.tdil.thalamus.android.gui.components.StyledButton
				                android:id="@+id/updateButton"
				                style="@style/btn_forward"
				                android:layout_margin="8dp"
				                android:text="@string/btn_tag_modify" />
            </LinearLayout>
        </TableRow>

        <TableRow
            android:id="@+id/tableRow3"
            style="@style/format_page_3rows1col_footer" >

            <include layout="@layout/footer" />
        </TableRow>
    </LinearLayout>

</merge>