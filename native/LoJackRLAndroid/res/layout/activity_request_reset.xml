<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context=".LoginActivity" >

    <!-- Login progress -->


    <!-- Login form -->

    <LinearLayout
        android:id="@+id/loginObjects"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="fill_vertical|fill_horizontal"
        android:layout_margin="0dp"
        android:background="@drawable/main_square"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:scrollbarStyle="insideOverlay"
        android:scrollbars="vertical"
        android:textAlignment="center" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center_vertical"
            android:layout_marginBottom="30dp"
            android:background="@drawable/toplayer85"
            android:baselineAligned="true"
            android:gravity="center_horizontal|center_vertical"
            android:measureWithLargestChild="true"
            android:minWidth="250dp"
            android:orientation="vertical"
            android:padding="20dp"
            android:scrollbarAlwaysDrawVerticalTrack="false"
            android:textAlignment="center" >

            <TextView
                android:id="@+id/loadingInfoText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp"
                android:text="@string/title_request_reset"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/orangeTitles"
                android:textColorLink="@color/orangeTitles" />

            <Spinner
                android:id="@+id/documentType"
                android:layout_width="fill_parent"
                android:layout_height="34dp"
                android:layout_marginBottom="3dp"
                android:layout_marginTop="3dp" />

            <EditText
                android:id="@+id/documentNumber"
                android:layout_width="fill_parent"
                android:layout_height="32dp"
                android:layout_marginBottom="3dp"
                android:layout_marginTop="3dp"
                android:ems="10"
                android:hint="@string/hnt_doc_number"
                android:inputType="number"
                android:textAlignment="center"
                android:textColorLink="@color/orangeTitles"
                android:textSize="14sp"
                android:textStyle="normal" >

                <requestFocus />
            </EditText>

            <Button
                android:id="@+id/resetPasswordButton"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:layout_marginBottom="3dp"
                android:layout_marginTop="3dp"
                android:background="@drawable/btn_rojo_normal_holo_light"
                android:minHeight="40dp"
                android:minWidth="@dimen/activity_horizontal_margin"
                android:onClick="@string/dologin"
                android:text="@string/btn_tag_reset_password"
                android:textColor="#ffffff"
                android:textSize="16sp" />

        </LinearLayout>

	</LinearLayout>

	<ImageView
		android:id="@+id/placahome"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_gravity="bottom|center_horizontal"
		android:layout_marginTop="20dp"
		android:adjustViewBounds="true"
		android:baselineAlignBottom="true"
		android:contentDescription="@string/action_loading"
		android:maxWidth="250dp"
		android:src="@drawable/logo_lojack" />
</merge>