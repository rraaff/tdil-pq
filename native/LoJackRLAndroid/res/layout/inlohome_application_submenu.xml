<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/application_home_submenu"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical" >

    <!-- TAB LOHOME -->
    <TableRow
        android:id="@+id/tableRow3"
        style="@style/tab_lohome_container">

		<LinearLayout
			android:layout_width="fill_parent"
			android:layout_height="46dp"
			android:orientation="horizontal" >

			<LinearLayout
				style="@style/inlohome_tab_basic">

                <TextView
                    android:id="@+id/tabAlarmsUnselected"
                    style="@style/inlohome_button_basic"
                    android:text="@string/btn_tag_alarms" />
                
            </LinearLayout>

			<ImageView
				android:contentDescription="@string/inlohome_tab_divider"
				android:id="@+id/inlohome_tab_separator1"
			    style="@style/inlohome_tab_separator" />

			<LinearLayout
			    style="@style/inlohome_tab_basic" >

                <TextView
                    android:id="@+id/tabLightsUnselected"
                    style="@style/inlohome_button_basic"
                    android:text="@string/btn_tag_lights" />
                
            </LinearLayout>

			<ImageView
			    android:contentDescription="@string/inlohome_tab_divider"
			    android:id="@+id/inlohome_tab_separator2"
			    style="@style/inlohome_tab_separator" />

			<LinearLayout
				style="@style/inlohome_tab_basic">

                <TextView
                    android:id="@+id/tabCamerasUnselected"
                    style="@style/inlohome_button_basic"
                    android:text="@string/btn_tag_cameras" />
                
            </LinearLayout>
		</LinearLayout>
    </TableRow>
    
    <!-- TODO: (Marcos) Faltaría poder cambiarle el color a la tipografía cuando está selected!
    android:textColor="@color/grayLightTabActive"
     -->

</LinearLayout>