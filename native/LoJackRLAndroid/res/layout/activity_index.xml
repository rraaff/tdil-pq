<merge xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context=".HomeActivity" >

    <!-- Login progress -->


    <!-- Login form -->

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/main_square"
        android:gravity="center_vertical|center_horizontal"
        android:orientation="vertical" >
        
        <com.tdil.thalamus.android.menu.SquareViewGroup
            android:id="@+id/rdGrid"
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="top"
            android:background="@drawable/bg_wheel2_on"
            android:baselineAligned="false"
            android:gravity="center">

            <Button
                android:id="@+id/btnFooterParkings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_places_r2_off"
                android:text="@string/btn_parkings"
                android:visibility="visible" />

            <Button
                android:id="@+id/btnFooterPrevent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_cars_r2_off"
                android:text="@string/btn_prevent"
                android:textColor="@color/new_wheel_link" />
            
            <Button
                android:id="@+id/btnFooterHome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_home_r2_off"
                android:text="@string/btn_prevent"
                android:textColor="@color/new_wheel_link" />

            <Button
                android:id="@+id/btnFooterPets"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_pets_r2_off"
                android:text="@string/btn_prevent"
                android:textColor="@color/new_wheel_link" />
            
            <Button
                android:id="@+id/btnFooterEstacioname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_cars_estacioname_off"
                android:text="@string/btn_prevent"
                android:textColor="@color/new_wheel_link" />
            
            <Button
                android:id="@+id/btnClubLJ"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_club_r2_off"
                android:text="@string/btn_prevent"
                android:textColor="@color/new_wheel_link" />
            
            <Button
                android:id="@+id/vluCount"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_marginRight="45dp"
                android:background="@drawable/badge_alert"
                android:textColor="@color/color_transparent"
                android:textSize="12sp" />
            
        </com.tdil.thalamus.android.menu.SquareViewGroup>


    </LinearLayout>


    
    <TextView
        android:id="@+id/dropTarget"
        android:layout_width="124dp"
        android:layout_height="124dp"
        android:layout_gravity="center"
        android:background="@drawable/transparente"
        android:gravity="center"
        android:paddingTop="5dp"
        android:text="@string/rd_default_comment"
        android:textAlignment="center"
        android:visibility="visible" />

    <ImageView
        android:id="@+id/placahome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="20dp"
        android:adjustViewBounds="true"
        android:baselineAlignBottom="true"
        android:contentDescription="@string/action_loading"
        android:src="@drawable/img_logo_lojack" />

</merge>