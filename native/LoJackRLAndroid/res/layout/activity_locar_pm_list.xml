<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context=".ActivityParkedModeVehicles" >

    <LinearLayout
        android:id="@+id/lohome_format"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" >

        <TableRow
            android:id="@+id/incl"
            style="@style/format_page_3rows1col_header" >

            <include layout="@layout/inlocar_application_fullmenu" />
        </TableRow>

		<TableRow
			android:layout_width="fill_parent"
			android:layout_height="wrap_content">
		
			<TextView
				android:id="@+id/vehiclesDescription"
				style="@style/modal_subtitleinform"
				android:layout_width="match_parent"
				android:layout_weight="1"
				android:text="@string/lst_title_parkmode_vehicle_list" />
		
		</TableRow>
        
        <TableRow
            android:id="@+id/tableRow2"
            style="@style/format_page_3rows1col_middle"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight=".97" >

                <ListView
                    android:id="@+id/pmStatusList"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent" >
                </ListView>
        </TableRow>
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:padding="5dp" >

            <Button
                android:id="@+id/pmVehiclesBack"
                style="@style/btn_backwards"
                android:focusable="false"
                android:text="@string/btn_tag_reset_password_back"
                android:visibility="visible" />

        </LinearLayout>

        <TableRow
            android:id="@+id/tableRow3"
            style="@style/format_page_3rows1col_footer" >

            <include layout="@layout/footer_forcar" />
        </TableRow>
    </LinearLayout>
</merge>