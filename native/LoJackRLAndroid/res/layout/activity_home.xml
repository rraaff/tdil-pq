<merge xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context=".HomeActivity" xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Login progress -->


    <!-- Login form -->

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/main_square"
        android:gravity="top"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:background="@color/grayTabBase"
            android:gravity="top"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/alarmas"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/transparente"
                android:text="@string/btn_tag_alarms"
                android:textColor="@color/bgBase"
                android:textSize="14sp"
                style="@android:attr/buttonBarButtonStyle" />

            <Button
                android:id="@+id/lights"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/transparente"
                android:text="@string/btn_tag_lights"
                android:textColor="@color/bgBase"
                android:textSize="14sp"
                style="@android:attr/buttonBarButtonStyle" />

            <Button
                android:id="@+id/cameras"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/transparente"
                android:text="@string/btn_tag_cameras"
                android:textColor="@color/bgBase"
                android:textSize="14sp"
                style="@android:attr/buttonBarButtonStyle" />

            <Button
                android:id="@+id/updateButton"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:background="@drawable/icon_menu_gray"
                android:text="@string/btn_tag_modify_my_data"
                android:textColor="@color/bgBase"
                style="@android:attr/buttonBarButtonStyle" />

            <Button
                android:id="@+id/changePassword"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/transparente"
                android:text="@string/btn_tag_change_password"
                android:textColor="@color/bgBase"
                android:textSize="14sp"
                android:visibility="visible"
                style="@android:attr/buttonBarButtonStyle" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="320dp"
            android:layout_height="320dp"
            android:layout_gravity="top|center"
            android:background="@drawable/placalanding" >

            <!-- ImageView
                android:id="@+id/placahome"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:background="@drawable/placalanding"
                android:baselineAlignBottom="false"
                android:contentDescription="Placa Home"
                android:maxHeight="480dp"
                android:maxWidth="480dp"
                android:scaleType="centerInside"
                android:src="@drawable/placalanding" / -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/LogoLoHome"
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:layout_gravity="top"
                    android:src="@drawable/logo_lo_home" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="50dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical" >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:orientation="vertical" >

                        <TextView
                            android:id="@+id/placaLandingTitle1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:text="alarma digital"
                            android:textAllCaps="true"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:textColor="@color/orangeTitles"
                            android:textSize="8sp" />

                        <TextView
                            android:id="@+id/placaLandingBajada1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Controlá tu alarma desde tu celular. Estés donde estés."
                            android:textAllCaps="true"
                            android:textColor="@color/bgBase"
                            android:textSize="8sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:orientation="vertical" >

                        <TextView
                            android:id="@+id/placaLandingTitle2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:text="bienvenida al hogar"
                            android:textAllCaps="true"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:textColor="@color/orangeTitles"
                            android:textSize="8sp" />

                        <TextView
                            android:id="@+id/placaLandingBajada2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Podés controlar las luces de tu casa desde donde quieras."
                            android:textAllCaps="true"
                            android:textColor="@color/bgBase"
                            android:textSize="8sp" />

                    </LinearLayout>
                    
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1"
                        android:orientation="vertical" >

                        <TextView
                            android:id="@+id/placaLandingTitle3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:text="Cámaras y video"
                            android:textAllCaps="true"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:textColor="@color/orangeTitles"
                            android:textSize="8sp" />

                        <TextView
                            android:id="@+id/placaLandingBajada2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Podés monitorear tu casa las 24hs desde donde estés."
                            android:textAllCaps="true"
                            android:textColor="@color/bgBase"
                            android:textSize="8sp" />

                    </LinearLayout>                    
                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>
    
    <ImageView
        android:id="@+id/placahome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:adjustViewBounds="true"
        android:baselineAlignBottom="true"
        android:contentDescription="@string/action_loading"
        android:maxWidth="200dp"
        android:src="@drawable/logo_lojack" />

</merge>