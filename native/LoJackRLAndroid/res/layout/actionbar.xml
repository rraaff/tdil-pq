<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="horizontal" >

   <LinearLayout
       android:layout_width="fill_parent"
       android:layout_height="wrap_content"
       android:layout_gravity="center"
       android:background="@color/grayTabBase"
       android:orientation="horizontal" >

       <ImageButton
           android:id="@+id/actionBarMessagesImage"
           style="@style/notification_icon"
           android:background="@drawable/ic_notification_nonews" />
       
        <com.tdil.thalamus.android.gui.components.StyledTextView
            android:id="@+id/messagesCountTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/black"
            android:gravity="center_horizontal"
            android:padding="5dp"
            android:paddingLeft="5dp"
            android:text="@string/app_name"
            android:textColor="@color/actionBarYellow"
            android:textSize="14sp" />
        
        <com.tdil.thalamus.android.gui.components.StyledTextView
            android:id="@+id/actionBarTitle"
            android:layout_width="2dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="@string/app_name"
            android:textColor="@color/actionBarYellow"
            android:paddingLeft="5dp"
            android:textSize="14sp" 
            android:visibility="gone" />

    </LinearLayout>

</LinearLayout>