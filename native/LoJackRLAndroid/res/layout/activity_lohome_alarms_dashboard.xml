<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context=".ActivityHomeAlarms" >

    <LinearLayout
        android:id="@+id/lohome_format"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" >

        <TableRow
            android:id="@+id/incl"
            style="@style/format_page_3rows1col_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <include
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                layout="@layout/inlohome_application_fullmenu" />

        </TableRow>

        <include
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            layout="@layout/inlohome_application_submenu" />

        <TableRow
            android:id="@+id/tableRow2"
            style="@style/format_page_3rows1col_middle"
            android:layout_width="fill_parent"
            android:layout_height="0dip"
            android:layout_weight=".97" >

            <ScrollView
                android:id="@+id/scrollView1"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" >
                
				<LinearLayout
					android:id="@+id/tab1"
				    android:layout_width="fill_parent"
				    android:layout_height="wrap_content"
				    android:layout_gravity="top"
				    android:orientation="vertical" >

				    <TableRow
				        android:layout_width="fill_parent"
				        android:layout_height="wrap_content" >
				        
				        <LinearLayout style="@style/title_dashboard_container" >
				            
				            <TextView style="@style/title_dashboard"
				                android:id="@+id/alarmDescription"
				                android:text="@string/title_dashboard_alarms"  />
				            
							<TextView style="@style/title_dashboard_state"
							    android:id="@+id/alarmStatus"
							    android:text="@string/status_unknown" />

				        </LinearLayout>

			        </TableRow>

				    <TableRow
						android:layout_width="fill_parent"
						android:layout_height="wrap_content">

						<LinearLayout style="@style/toggle_button_container" >

                            <ToggleButton
                                android:id="@+id/btnToggleAlarm"
						        android:layout_width="match_parent"
						        android:layout_height="48dp"
						        android:layout_marginBottom="2dp"
						        android:layout_marginTop="2dp"
						        android:background="@color/bgBase"
						        android:drawableRight="@drawable/btn_toggle_fake_switch"
						        android:gravity="center_vertical|left"
						        android:paddingLeft="10dp"
						        android:textOff="Armar alarma"
						        android:textOn="Desarmar alarma"
						        android:textSize="15sp" />
					    
						</LinearLayout>
			
				    </TableRow>

                    <TableRow style="@style/data_indashboard_container" >

                        <TextView style="@style/label_indash"
                            android:id="@+id/loadingInfoText"
                            android:text="@string/lst_itm_last_change_fullword"/>

                        <TextView style="@style/label_data_indash"
                            android:id="@+id/lastChangeDate"
                            android:text="2013-05-04 18:20" />
                    </TableRow>

					<TableRow
					    style="@style/data_indashboard_container"
					    android:paddingBottom="10dp" >

                        <TextView style="@style/label_data_indash"
                            android:id="@+id/lastChangeStatus"
                            android:text="@string/status_armed"/>

                        <TextView style="@style/label_indash"
                            android:id="@+id/textView3"
                            android:paddingLeft="4dp"
                            android:paddingRight="4dp"
                            android:text="@string/lst_itm_by" />

                        <TextView style="@style/label_data_indash"
                            android:id="@+id/lastChangeUser"
                            android:text="@string/status_unknown" />
                    </TableRow>

					<TableRow
					    android:layout_width="fill_parent"
					    android:layout_height="1dp"
					    android:background="@color/grayLightBase" >
					   
					</TableRow>

					<TableRow
					    android:layout_width="fill_parent"
					    android:layout_height="wrap_content"
					    android:background="@color/bgBase"
					    android:gravity="left"
					    android:textAlignment="viewStart" >

                        <Button style="@style/ButtonLoginList"
                            android:id="@+id/goToAlarmViewLog"
                            android:text="@string/btn_view_log" />

                    </TableRow>

					<TableRow
					    android:layout_width="fill_parent"
					    android:layout_height="wrap_content"
					    android:background="@color/bgBase"
					    android:gravity="left"
					    android:textAlignment="viewStart" >

                        <Button style="@style/ButtonAgendainList"
                            android:id="@+id/goToAlarmViewLog"
                            android:text="@string/btn_agendas_list" />

                    </TableRow>
<!-- TODO: (Marcos) ACA EMPIEZA EL LISTADO DE AGENDAS  -->
					<TableRow
						android:layout_width="fill_parent"
						android:layout_height="wrap_content">
					
						<TextView
							android:id="@+id/titleAlarmAgendasList"
							style="@style/modal_subtitleinform"
							android:layout_width="match_parent"
							android:layout_weight="1"
							android:text="@string/lst_title_alarms_agendas_list" />
					
					</TableRow>
					
					<TableRow
					    android:layout_width="fill_parent"
					    android:layout_height="wrap_content"
					    android:background="@color/bgBase"
					    android:gravity="left"
					    android:textAlignment="viewStart" >

                        <Button style="@style/ButtonNewAgenda"
                            android:id="@+id/goToNewAgenda"
                            android:text="@string/btn_new_agenda" />

                    </TableRow>
                    
					<!-- acÃ¡ loopea los items de agendas existentes -->
					<TableRow
					    android:layout_width="fill_parent"
					    android:layout_height="wrap_content"
					    android:background="@color/bgBase"
					    android:gravity="left"
					    android:textAlignment="viewStart" >

                        <Button style="@style/ButtonAgendaGrayinList"
                            android:id="@+id/goToAlarmViewLog"
                            android:text="Los JUEVES a la noche" />

                    </TableRow>
                    <!-- Fin loop de agendas existentes-->

<!-- FIN DEL LISTADO DE AGENDAS -->
<!-- TODO: (Marcos) ACA EMPIEZA EL EDITOR DE AGENDAS -->
					<TableRow
						android:layout_width="fill_parent"
						android:layout_height="wrap_content">
					
						<TextView
							android:id="@+id/titleAgendasEditor"
							style="@style/modal_subtitleinform"
							android:layout_width="match_parent"
							android:layout_weight="1"
							android:text="@string/lst_title_agenda_editor" />
					
					</TableRow>

	                <EditText
	                    android:id="@+id/agendaName"
	                    style="@style/text_inputs_white_01"
	                    android:hint="@string/hnt_agenda_name" />

	                <!-- Fecha desde/hasta -->
	                <!-- Horario desde/hasta -->
	                
	                <TextView
	                    style="@style/modal_subtitleinform"
	                    android:text="@string/subtitle_agendas_repetitions" />

                    <CheckBox
                        android:id="@+id/agendaRepMonday"
                        style="@style/checkbox_white_01"
                        android:text="@string/crt_tag_monday" />
                    
                    <CheckBox
                        android:id="@+id/agendaRepTuesday"
                        style="@style/checkbox_white_01"
                        android:text="@string/crt_tag_tuesday" />
                    
                    <CheckBox
                        android:id="@+id/agendaRepWednesday"
                        style="@style/checkbox_white_01"
                        android:text="@string/crt_tag_wednesday" />
                    
                    <CheckBox
                        android:id="@+id/agendaRepThursday"
                        style="@style/checkbox_white_01"
                        android:text="@string/crt_tag_thursday" />
                    
                    <CheckBox
                        android:id="@+id/agendaRepFriday"
                        style="@style/checkbox_white_01"
                        android:text="@string/crt_tag_friday" />
                    
                    <CheckBox
                        android:id="@+id/agendaRepSaturday"
                        style="@style/checkbox_white_01"
                        android:text="@string/crt_tag_saturday" />
                    
                    <CheckBox
                        android:id="@+id/agendaRepSunday"
                        style="@style/checkbox_white_01"
                        android:text="@string/crt_tag_sunday" />
<!-- FIN EDITOR DE AGENDAS -->

                </LinearLayout>
                
			</ScrollView>

        </TableRow>

        <TableRow
            android:id="@+id/tableRow3"
            style="@style/format_page_3rows1col_footer" >

            <include layout="@layout/footer_forhome" />
        </TableRow>
    </LinearLayout>
</merge>