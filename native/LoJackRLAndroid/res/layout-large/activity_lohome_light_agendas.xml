<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context=".ActivityHomeLightsAgendas" >

    <LinearLayout
        android:id="@+id/lohome_format"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" >

        <TableRow
            android:id="@+id/incl"
            style="@style/format_page_3rows1col_header" >

            <include layout="@layout/inlohome_application_fullmenu" />
        </TableRow>
        <include layout="@layout/inlohome_application_submenu" />

        
		<TableRow
			android:layout_width="fill_parent"
			android:layout_height="wrap_content">
		
			<com.tdil.thalamus.android.gui.components.StyledTextView
				android:id="@+id/text1"
				style="@style/modal_subtitleinform"
				android:layout_width="match_parent"
				android:layout_weight="1"
				android:text="@string/lst_title_lights_agendas_list" />
		
		</TableRow>
		
		<TableRow
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:background="@color/bgBase"
		    android:gravity="left"
		    android:textAlignment="viewStart" >

            <com.tdil.thalamus.android.gui.components.StyledButton style="@style/ButtonNewAgenda"
                android:id="@+id/goToNewAgenda"
                android:text="@string/btn_new_agenda" />

        </TableRow>

        <TableRow
            android:id="@+id/tableRow2"
            style="@style/format_page_3rows1col_middle"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight=".97" >

                <ListView
                    android:id="@+id/agendaList"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent" >
                </ListView>

        </TableRow>

        <TableRow
            android:id="@+id/tableRow3"
            style="@style/format_page_3rows1col_footer" >

            <include layout="@layout/footer_forhome" />
        </TableRow>
    </LinearLayout>
</merge>