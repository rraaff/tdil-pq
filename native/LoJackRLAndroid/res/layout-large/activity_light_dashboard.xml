<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/main_square"
    tools:context=".HomeLightDashboard" >

    <TabHost
        android:id="@+id/tabhost"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true" 
        android:layout_above="@+id/footer"
        android:layout_below="@+id/header">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <TabWidget
                android:id="@android:id/tabs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/grayTabBase" >

            </TabWidget>

            <FrameLayout
                android:id="@android:id/tabcontent"
                android:layout_width="match_parent"
                android:layout_height="fill_parent" >
                
                <LinearLayout
                    android:id="@+id/tab1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" 
                    android:orientation="vertical" >
                </LinearLayout>
                
				<LinearLayout android:id="@+id/tab2"
				    android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:orientation="vertical">
			
				    <TableRow
						android:layout_width="fill_parent"
						android:layout_height="wrap_content"
						android:background="@drawable/bar_bg">
			
					    <LinearLayout
					        android:layout_width="match_parent"
					        android:layout_height="wrap_content"
					        android:orientation="horizontal">
			
					        <TextView
					            android:id="@+id/lightDescription"
					            android:layout_width="fill_parent"
					            android:layout_height="wrap_content"
					            android:layout_margin="12dp"
					            android:text="@string/action_loading"
					            android:textAllCaps="true"
					            android:textColor="@color/lst_itm_title"
					            android:textSize="16sp" />
			
						</LinearLayout>
			        </TableRow>
			
				    <TableRow
						android:layout_width="fill_parent"
						android:layout_height="wrap_content"
						android:background="@drawable/bar_bg">
			
						<LinearLayout
					        android:layout_width="match_parent"
					        android:layout_height="wrap_content"
					        android:orientation="horizontal"
					        android:weightSum="6">
				        
					    	<!-- hide switch -->

						    <ToggleButton
						        android:id="@+id/switchActivate"
						        android:layout_width="0dp"
						        android:layout_height="wrap_content"
						        android:layout_margin="12dp"
						        android:layout_weight="1"
						        android:textOff="OFF"
						        android:textOn="ON" />
						    
						    <ToggleButton
						        android:id="@+id/switchRandom"
						        android:layout_width="0dp"
						        android:layout_height="wrap_content"
						        android:layout_margin="12dp"
						        android:layout_weight="1"
						        android:textOff="Ran OFF"
						        android:textOn="Ran ON" />
					    
						</LinearLayout>
			
				    </TableRow>
				    
					<TableRow 
					    android:layout_width="fill_parent"
					    android:layout_height="wrap_content"
					    android:paddingBottom="6dp"
					    android:paddingLeft="12dp"
					    android:paddingRight="12dp"
					    android:paddingTop="6dp"
					    android:background="@color/bgBase">
			
						<TextView
						    android:id="@+id/textView2"
						    android:layout_width="wrap_content"
						    android:layout_height="wrap_content"
						    android:text="@string/lst_itm_status"
						    android:textColor="@color/lst_itm_normal"
						    android:textSize="12sp" />
						
						<TextView
						    android:id="@+id/lightStatus"
						    android:layout_width="wrap_content"
						    android:layout_height="wrap_content"
							android:paddingLeft="4dp"
						    android:text="@string/status_unknown"
						    android:textColor="@color/black"
						    android:textSize="12sp" />
			
					</TableRow>
			
					<TableRow 
					    android:layout_width="fill_parent"
					    android:layout_height="wrap_content"
					    android:paddingBottom="6dp"
					    android:paddingLeft="12dp"
					    android:paddingRight="12dp"
					    android:paddingTop="6dp"
					    android:background="@color/bgBase">
				
					   <TextView
							android:id="@+id/loadingInfoText"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:text="@string/lst_itm_last_change"
						    android:textColor="@color/lst_itm_normal"
						    android:textSize="12sp" />
					
					   <TextView
							android:id="@+id/lastChangeDate"
							android:layout_width="wrap_content"
							android:layout_height="fill_parent"
							android:paddingLeft="4dp"
							android:text="2013-05-04 18:20"
							android:textColor="@color/black"
							android:textSize="12sp" />
			
					</TableRow>
			
					<TableRow
					    android:layout_width="fill_parent"
					    android:layout_height="wrap_content"
					    android:background="@color/bgBase"
					    android:paddingBottom="6dp"
					    android:paddingLeft="12dp"
					    android:paddingRight="12dp"
					    android:paddingTop="6dp" >
			
					    <TextView
							android:id="@+id/lastChangeStatus"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:text="@string/status_armed"
							android:textColor="@color/black"
							android:textSize="12sp"  />
			
					   <TextView
							android:id="@+id/textView3"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:paddingLeft="4dp"
							android:paddingRight="4dp"
							android:text="@string/lst_itm_by"
							android:textColor="@color/lst_itm_normal"
							android:textSize="12sp" />
			
					   <TextView
							android:id="@+id/lastChangeUser"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:text="@string/status_unknown"
							android:textColor="@color/black"
							android:textSize="12sp" />
					</TableRow>
				
					<TableRow 
					    android:layout_width="fill_parent"
					    android:layout_height="wrap_content"
					    android:padding="12dp"
					    android:background="@color/bgBase" >
			
					    <Button
						    android:id="@+id/goToViewLightLog"
						    android:layout_width="fill_parent"
						    android:layout_height="wrap_content"
						    android:text="@string/btn_view_log" />
					</TableRow>
			
					<RelativeLayout
					    android:layout_width="fill_parent"
					    android:layout_height="fill_parent"
					    android:layout_gravity="fill_vertical|fill_horizontal" >
			
						<ImageView
						    android:id="@+id/placahome"
						    android:layout_width="250dp"
						    android:layout_height="103dp"
						    android:layout_alignParentBottom="true"
						    android:layout_alignParentLeft="true"
						    android:layout_alignParentRight="true"
						    android:layout_alignParentTop="false"
						    android:contentDescription="@string/action_loading"
						    android:maxHeight="144dp"
						    android:maxWidth="350dp"
						    android:src="@drawable/img_logo_lojack" />
					    
					</RelativeLayout>
			
				</LinearLayout>
			
				<LinearLayout
				    android:id="@+id/tab3" android:layout_width="match_parent"
			        android:layout_height="match_parent" 
			        android:orientation="vertical" >
			    </LinearLayout>
                
        	</FrameLayout>
        </LinearLayout>
    </TabHost>
</RelativeLayout>