<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context=".DemoActivityCars" >

    <LinearLayout
        android:id="@+id/lohome_format"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" >

        <TableRow
            android:id="@+id/tableRow1"
            style="@style/format_page_3rows1col_header" >

            <include layout="@layout/inlojack_application_header" />
        </TableRow>
        
		<TableRow
			android:layout_width="fill_parent"
			android:layout_height="wrap_content">
		
			<com.tdil.thalamus.android.gui.components.StyledTextView
				android:id="@+id/text1"
				style="@style/modal_subtitleinform"
				android:layout_width="match_parent"
				android:layout_weight="1"
				android:text="@string/lst_title_notification_config" />
		
		</TableRow>

        <TableRow
            android:id="@+id/tableRow2"
            style="@style/format_page_3rows1col_middle"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight=".97" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical" >

                <com.tdil.thalamus.android.gui.components.StyledCheckbox
                    android:id="@+id/lojackConf"
                    style="@style/checkbox_white_01"
                    android:text="@string/btn_lojack_notif_conf" />

                <com.tdil.thalamus.android.gui.components.StyledCheckbox
                    android:id="@+id/carConf"
                    style="@style/checkbox_white_01"
                    android:text="@string/btn_car_notif_conf" />

                <com.tdil.thalamus.android.gui.components.StyledCheckbox
                    android:id="@+id/homeConf"
                    style="@style/checkbox_white_01"
                    android:text="@string/btn_home_notif_conf" />
                
                <com.tdil.thalamus.android.gui.components.StyledCheckbox
                    android:id="@+id/petConf"
                    style="@style/checkbox_white_01"
                    android:text="@string/btn_pet_notif_conf" />
                
                <com.tdil.thalamus.android.gui.components.StyledButton
				                android:id="@+id/updateButton"
				                style="@style/btn_forward"
				                android:layout_margin="8dp"
				                android:text="@string/btn_tag_modify" />
            </LinearLayout>
        </TableRow>

        <TableRow
            android:id="@+id/tableRow3"
            style="@style/format_page_3rows1col_footer" >

            <include layout="@layout/footer" />
        </TableRow>
    </LinearLayout>

</merge>