<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE sqlMapConfig
    PUBLIC "-//ibatis.apache.org//DTD SQL Map Config 2.0//EN"
    "http://ibatis.apache.org/dtd/sql-map-config-2.dtd">

<sqlMapConfig>

	<settings useStatementNamespaces="true" />
  <!-- Configure a built-in transaction manager.  If you're using an
       app server, you probably want to use its transaction manager
       and a managed datasource -->
  <transactionManager type="JDBC" >
	<dataSource type="JNDI">
		<property name="DataSource" value="java:comp/env/jdbc/database"/>
	</dataSource>
	</transactionManager>

  <!-- List the SQL Map XML files. They can be loaded from the
       classpath, as they are here (com.domain.data...) -->
    <sqlMap resource="com/tdil/ljpeugeot/dao/maps/sqlserver/dbo_BLOB_DATA_SqlMap.xml"/>
	<sqlMap resource="com/tdil/ljpeugeot/dao/maps/sqlserver/dbo_CACHE_REGION_SqlMap.xml"/>
	<sqlMap resource="com/tdil/ljpeugeot/dao/maps/sqlserver/dbo_CITY_SqlMap.xml"/>
	<sqlMap resource="com/tdil/ljpeugeot/dao/maps/sqlserver/dbo_DEALER_SqlMap.xml"/>
	<sqlMap resource="com/tdil/ljpeugeot/dao/maps/sqlserver/dbo_POI_SqlMap.xml"/>
	<sqlMap resource="com/tdil/ljpeugeot/dao/maps/sqlserver/dbo_STATE_SqlMap.xml"/>
	<sqlMap resource="com/tdil/ljpeugeot/dao/maps/sqlserver/dbo_SYSPROPERTIES_SqlMap.xml"/>
	<sqlMap resource="com/tdil/ljpeugeot/dao/maps/sqlserver/dbo_SYSTEMUSER_SqlMap.xml"/>
	<sqlMap resource="com/tdil/ljpeugeot/dao/maps/sqlserver/dbo_WEBSITEUSER_SqlMap.xml"/>
	<sqlMap resource="com/tdil/ljpeugeot/dao/maps/sqlserver/dbo_MODEL_SqlMap.xml"/>
	<sqlMap resource="com/tdil/ljpeugeot/dao/maps/sqlserver/dbo_VEHICLE_SqlMap.xml"/>
	<sqlMap resource="com/tdil/ljpeugeot/dao/maps/sqlserver/dbo_ADVICE_SqlMap.xml"/>
	<sqlMap resource="com/tdil/ljpeugeot/dao/maps/sqlserver/dbo_SERVICE_SqlMap.xml"/>
    <sqlMap resource="com/tdil/ljpeugeot/dao/maps/sqlserver/dbo_CONTACTDATA_SqlMap.xml"/>
</sqlMapConfig>
