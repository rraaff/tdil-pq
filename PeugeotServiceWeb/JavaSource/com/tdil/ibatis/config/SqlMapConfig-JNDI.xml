<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE sqlMapConfig
    PUBLIC "-//ibatis.apache.org//DTD SQL Map Config 2.0//EN"
    "http://ibatis.apache.org/dtd/sql-map-config-2.dtd">

<sqlMapConfig>

	<settings useStatementNamespaces="true" />
  <!-- Configure a built-in transaction manager.  If you're using an
       app server, you probably want to use its transaction manager
       and a managed datasource -->
  <transactionManager type="JDBC" >
	<dataSource type="JNDI">
		<property name="DataSource" value="java:comp/env/jdbc/database"/>
	</dataSource>
	</transactionManager>

  <!-- List the SQL Map XML files. They can be loaded from the
       classpath, as they are here (com.domain.data...) -->
	<sqlMap resource="com/tdil/ljpeugeot/dao/maps/BLOB_DATA_SqlMap.xml"/>
	<sqlMap resource="com/tdil/ljpeugeot/dao/maps/CACHE_REGION_SqlMap.xml"/>
	<sqlMap resource="com/tdil/ljpeugeot/dao/maps/CITY_SqlMap.xml"/>
	<sqlMap resource="com/tdil/ljpeugeot/dao/maps/DEALER_SqlMap.xml"/>
	<sqlMap resource="com/tdil/ljpeugeot/dao/maps/POI_SqlMap.xml"/>
	<sqlMap resource="com/tdil/ljpeugeot/dao/maps/STATE_SqlMap.xml"/>
	<sqlMap resource="com/tdil/ljpeugeot/dao/maps/SYSPROPERTIES_SqlMap.xml"/>
	<sqlMap resource="com/tdil/ljpeugeot/dao/maps/SYSTEMUSER_SqlMap.xml"/>
	<sqlMap resource="com/tdil/ljpeugeot/dao/maps/WEBSITEUSER_SqlMap.xml"/>
	<sqlMap resource="com/tdil/ljpeugeot/dao/maps/MODEL_SqlMap.xml"/>
	<sqlMap resource="com/tdil/ljpeugeot/dao/maps/VEHICLE_SqlMap.xml"/>
	<sqlMap resource="com/tdil/ljpeugeot/dao/maps/ADVICE_SqlMap.xml"/>
	<sqlMap resource="com/tdil/ljpeugeot/dao/maps/SERVICE_SqlMap.xml"/>
	<sqlMap resource="com/tdil/ljpeugeot/dao/maps/CONTACTDATA_SqlMap.xml"/>
	<sqlMap resource="com/tdil/ljpeugeot/dao/maps/DATA_IMPORT_SqlMap.xml"/>
</sqlMapConfig>
